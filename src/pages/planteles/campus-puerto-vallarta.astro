---
import Layout from "@/layouts/Layout.astro";
import { obtenerProgramasPorPlantel } from "@helpers/estructura_educativa";
import Video from "@/assets/Videos/planteles/Une campus.webm";

const programasCentro = obtenerProgramasPorPlantel("CAMPUS PUERTO VALLARTA");
import { Phone, Clock1, MapPin } from "@lucide/astro";
import Carreradeplantel from "@/components/sections/planteles/Carreradeplantel.astro";
import CtaVisita from "@/components/sections/planteles/ctaVisita.astro";
---

<Layout>
  <main class="min-h-screen">
    <!-- Hero Section -->

    <section
      class="plantel-bg relative min-h-[65vh] overflow-hidden bg-cover bg-center bg-no-repeat flex items-center justify-center"
    >
      {/* Hero Content */}
      <div
        class="relative z-10 container mx-auto px-4 h-full min-h-[85vh] md:min-h-[65vh] flex flex-col justify-center"
      >
        <div
          class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center max-w-7xl mx-auto"
        >
          {/* Left Side - Text Content */}
          <div class="text-center lg:text-left text-white">
            {/* Main Title */}
            <h1
              class="text-4xl md:text-6xl lg:text-7xl font-bold tracking-wider mb-4"
            >
              Campus Puerto Vallarta
            </h1>

            {/* Description */}
            <p
              class="text-lg md:text-xl leading-relaxed mb-8 font-light max-w-2xl"
            >
              En nuestro campus Campus Puerto Vallarta, lo importante eres tú.
              Con un ambiente cálido y una comunidad unida, este plantel ofrece
              programas académicos de calidad, atención personalizada y un
              fuerte vínculo con la comunidad local.
            </p>

            {/* Desktop Buttons - Hidden on mobile */}
            <div
              class="hidden lg:flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
            >
              <a
                href="/contacto/solicitarinformacion"
                class="bg-red-600 hover:bg-red-700 hover:scale-105 hover:shadow-xl transition-all duration-300 text-white px-8 py-3 rounded-lg font-semibold text-lg"
               aria-label="Ir a Solicitar información" title="Solicitar información">
                Solicitar información
              </a>

              <a
                href="/contacto/formulario-inscripcion"
                class="border-2 border-white text-white hover:scale-105 hover:shadow-xl transition-all duration-300 px-8 py-3 rounded-lg font-semibold text-lg"
               aria-label="Ir a Inscribirme" title="Inscribirme">
                Inscribirme
              </a>
            </div>
          </div>

          {/* Right Side - Glassmorphism Cards */}
          <div
            class="flex flex-col items-center lg:items-end lg:justify-end space-y-6 lg:h-full"
          >
            {/* Stats Card */}

            {/* Mobile Buttons - Visible only on mobile */}
            <div class="flex lg:hidden flex-col w-full max-w-sm space-y-4">
              <button
                class="bg-red-600 hover:bg-red-700 transition-all duration-300 text-white px-8 py-3 rounded-lg font-semibold text-lg w-full"
               aria-label="Agendar una visita" title="Agendar una visita">
                Agendar una visita
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="bg-white py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12">
          <button
            class="bg-azul-une text-white px-6 py-2 rounded-full text-sm font-medium mb-6 hover:bg-blue-700 transition-colors"
           aria-label="Acerca de Campus Puerto Vallarta" title="Acerca de Campus Puerto Vallarta">
            Acerca de Campus Puerto Vallarta
          </button>

          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            Educación de calidad en Campus Puerto Vallarta
          </h2>

          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            UNE Campus Puerto Vallarta ofrece formación profesional integral con
            amplia oferta académica, desde licenciaturas hasta maestrías, en el
            destino turístico más importante del Pacífico mexicano.
          </p>
        </div>

        <!-- Content Grid -->
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <!-- Image Container -->
         <div class="relative">
            <div class="rounded-2xl overflow-hidden shadow-2xl">
              <video
                src={Video}
                alt="Campus UNE Centro Médico"
                class="w-full h-auto object-cover"
                autoplay
                muted
                loop
                controls></video>
            </div>
          </div>

          <!-- Features List -->
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div
                  class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center"
                >
                  <svg
                    class="w-4 h-4 text-green-600"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>
              <p class="text-lg text-gray-700">
                Ubicación estratégica: Carretera a Tepic No. 5657, Col. Las
                Juntas
              </p>
            </div>

            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div
                  class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center"
                >
                  <svg
                    class="w-4 h-4 text-green-600"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>
              <p class="text-lg text-gray-700">
                15 programas académicos: licenciaturas, ingenierías y maestrías
              </p>
            </div>

            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div
                  class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center"
                >
                  <svg
                    class="w-4 h-4 text-green-600"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>
              <p class="text-lg text-gray-700">
                Programas de salud: Terapia Física, Nutrición y Psicología
              </p>
            </div>

            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div
                  class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center"
                >
                  <svg
                    class="w-4 h-4 text-green-600"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>
              <p class="text-lg text-gray-700">
                Ingenierías especializadas en tecnología y desarrollo
              </p>
            </div>

            <!-- Contact Info -->
          </div>
        </div>
      </div>
    </section>

    <section class="bg-azul-une text-white py-8">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Horarios -->
          <div class="text-center md:text-left">
            <div class="flex items-center justify-center md:justify-start mb-4">
              <div
                class="w-10 h-10 bg-opacity-20 rounded-full flex items-center justify-center mr-3"
              >
                <Clock1 />
              </div>
              <h3 class="text-xl font-semibold">Horarios</h3>
            </div>
            <p class="text-blue-100">8:30 a.m.–7:30 p.m.</p>
          </div>

          <!-- Dirección -->
          <div class="text-center md:text-left">
            <div class="flex items-center justify-center md:justify-start mb-4">
              <div
                class="w-10 h-10 bg-opacity-20 rounded-full flex items-center justify-center mr-3"
              >
                <MapPin />
              </div>
              <h3 class="text-xl font-semibold">Dirección</h3>
            </div>
            <a
              href="https://www.google.com.mx/maps/place/UNE/@20.6971778,-105.2377097,20z/data=!4m12!1m5!3m4!2zMjDCsDQxJzQ5LjciTiAxMDXCsDE0JzE1LjQiVw!8m2!3d20.6971513!4d-105.2375982!3m5!1s0x8421460bd8416ca5:0x8e0ec4a9e079c7f5!8m2!3d20.6972046!4d-105.2376951!16s%2Fg%2F11g6xsscmp?entry=ttu&g_ep=EgoyMDI1MDczMC4wIKXMDSoASAFQAw%3D%3D"
              target="_blank"
              class="text-blue-100 hover:text-white transition-colors cursor-pointer text-left inline-block"
            >
              Carretera a Tepic No. 5657 Col. las Juntas C.P 48291
            </a>
          </div>

          <!-- Teléfonos -->
          <div class="text-center md:text-left">
            <div class="flex items-center justify-center md:justify-start mb-4">
              <div
                class="w-10 h-10 bg-opacity-20 rounded-full flex items-center justify-center mr-3"
              >
                <Phone />
              </div>
              <h3 class="text-xl font-semibold">Teléfonos</h3>
            </div>

            <!-- Container for phone numbers - horizontal on desktop, vertical on mobile -->
            <div
              class="flex flex-col md:flex-row md:space-x-6 space-y-3 md:space-y-0"
            >
              <!-- Teléfono principal -->
              <div class="flex flex-col">
                <span class="text-blue-100 text-sm">Teléfono:</span>
                <a
                  href="tel:+523380000837"
                  class="text-white hover:text-blue-200 transition-colors font-medium"
                 aria-label="Llamar a +523380000837" title="Número de teléfono: +523380000837">
                  33 8000 0837
                </a>
              </div>

              <!-- WhatsApp -->
              <div class="flex flex-col">
                <span class="text-blue-100 text-sm">WhatsApp:</span>
                <a
                  href="https://wa.me/3221180436"
                  target="_blank"
                  class="whatsapp-btn inline-flex items-center px-3 py-1 rounded-lg text-white hover:text-blue-200 font-medium hover:bg-opacity-10 transition-colors"
                >
                  <svg
                    class="w-4 h-4 mr-2"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.382"
                    ></path>
                  </svg>
                  32 2118 0436
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <Carreradeplantel
      titulo="Nuestras Carreras Profesionales"
      descripcion="Descubre nuestra amplia oferta académica diseñada para formar líderes en diferentes áreas del conocimiento"
      programas={programasCentro}
      itemsPerPage={10}
    />

    <CtaVisita />
  </main>
</Layout>

<style>
  .plantel-bg {
    background-image: url("/src/assets/Imagenes/Heros/Planteles/Campus.webp");
  }

  @media (max-width: 767px) {
    .plantel-bg {
      background-image: url("/src/assets/Imagenes/Heros/Planteles/Campus.webp");
    }
  }
</style>
