---
import Layout from "@/layouts/Layout.astro";
import Hero from "@assets/Imagenes/Heros/Blogs/ing.webp"
---

<Layout>
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-slate-50 to-blue-50">
        <div class="max-w-7xl  mx-auto px-2 py-12">
            <!-- Date and Tags -->
            <div class="text-center mb-8">
                <p class="text-red-500 font-semibold text-sm mb-4 fade-in">Enero 2025</p>
                
               
               
            </div>

            <!-- Hero Image Section -->
            <div class="relative fade-in">
                <div class="bg-gradient-to-r from-blue-900 via-blue-800 to-indigo-900 rounded-2xl overflow-hidden shadow-2xl">
                    <div class="relative flex flex-col items-center p-8 md:p-12">
                        <!-- Top - Image Section -->
                        <div class="w-full mb-8">
                            <div class="relative">
                                <div class="bg-gray-800 rounded-lg p-2 shadow-xl transform -rotate-1 hover:rotate-0 transition-transform duration-300">
                                    <div class="bg-blue-900 rounded-md overflow-hidden">
                                        <img 
                                            src={Hero.src}
                                            alt="Architecture and Engineering Dashboard"
                                            class=""
                                        />
                                    </div>
                                </div>
                                
                                <!-- Floating Charts -->
                                <div class="absolute -right-4 -top-4 bg-white rounded-lg p-3 shadow-lg transform rotate-12 animate-bounce">
                                    <div class="w-16 h-12 bg-gradient-to-r from-amber-400 to-orange-500 rounded opacity-80"></div>
                                </div>
                                
                                <div class="absolute -left-4 -bottom-4 bg-white rounded-lg p-2 shadow-lg animate-pulse">
                                    <div class="w-12 h-8 bg-gradient-to-r from-slate-400 to-gray-500 rounded opacity-80"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Bottom - Text Content -->
                        <div class="w-full text-white text-center">
                            <div class="flex items-center justify-center mb-4">
                                <div class="w-8 h-8 bg-yellow-400 rounded-full flex items-center justify-center mr-3">
                                    <svg class="w-4 h-4 text-gray-900" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                                    </svg>
                                </div>
                                <span class="text-yellow-400 font-semibold text-sm">CONSTRUCCIÓN</span>
                            </div>
                            
                            <h2 class="text-3xl md:text-4xl font-bold mb-4 leading-tight">
                                ARQUITECTURA<br>
                                vs INGENIERÍA
                            </h2>
                            
                            <p class="text-blue-100 text-lg mb-6 leading-relaxed">
                                La Relación Entre Arquitectura e Ingeniería: Una Alianza que Construye el Futuro
                            </p>
                            
                            
                        </div>
                    </div>
                    
                </div>


                <!-- Decorative Elements -->
                <div class="absolute -top-6 -left-6 w-24 h-24 border-2 border-dashed border-blue-300 rounded-lg opacity-50"></div>
                <div class="absolute -bottom-4 -right-4 w-16 h-16 border-2 border-dashed border-blue-300 rounded-lg opacity-50"></div>
                
                <!-- Floating Icons -->
                <div class="absolute top-8 -right-4 hidden lg:block">
                    <div class="bg-orange-100 rounded-full p-3 shadow-lg hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M5 4a3 3 0 00-3 3v6a3 3 0 003 3h10a3 3 0 003-3V7a3 3 0 00-3-3H5zm-1 9v-1h5v2H5a1 1 0 01-1-1zm7 1h4a1 1 0 001-1v-1h-5v2zm0-4h5V8h-5v2zM9 8H4v2h5V8z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                </div>

                <div class="absolute bottom-8 -left-4 hidden lg:block">
                    <div class="bg-green-100 rounded-full p-3 shadow-lg hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3 6a3 3 0 013-3h10a1 1 0 01.8 1.6L14.25 8l2.55 3.4A1 1 0 0116 13H6a1 1 0 00-1 1v3a1 1 0 11-2 0V6z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                </div>

                 <!-- Tags -->
                <div class="flex flex-wrap justify-center gap-4 mb-12 fade-in mt-12">
                    <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
                        Enero 2025
                    </span>
                    <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
                        Mtro. José de Jesús Sánchez Lozano
                    </span>
                    <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
                        Arquitectura
                    </span>
                </div>

                <!-- Dotted Connection Lines -->
                <div class="absolute top-8 right-8 w-32 h-0.5 border-t-2 border-dotted border-blue-300 opacity-60 hidden lg:block"></div>
                <div class="absolute bottom-8 left-8 w-24 h-0.5 border-t-2 border-dotted border-blue-300 opacity-60 hidden lg:block"></div>
            </div>
        </div>
    </div>

  <!-- Blog Content -->
  <div class="bg-white">
    <div class="max-w-4xl mx-auto px-6 py-12">
      <article class="prose prose-lg prose-blue max-w-none">
        <h1 class="blog-title fade-in">La Relación Entre Arquitectura e Ingeniería: Una Alianza que Construye el Futuro</h1>

        <p class="blog-paragraph fade-in font-semibold text-green-600">Mtro. José de Jesús Sánchez Lozano</p>

        <p class="blog-paragraph fade-in">
          La arquitectura y la ingeniería no son antagónicas, son más bien dos disciplinas que se encuentran estrechamente relacionadas, es decir se complementan, aunque con enfoques y objetivos distintos. A menudo su trabajo en conjunto crea estructuras seguras, funcionales y estéticamente agradables cumpliendo principalmente la parte estética que se puede observar, sin embargo, sin la ingeniería no podría sostenerse.
        </p>

        <h2 class="blog-subtitle fade-in">¿Cuáles son las principales diferencias?</h2>

        <p class="blog-paragraph fade-in">
          • <strong>Arquitectura:</strong> Se centra en el diseño conceptual y la estética de los espacios, considerando aspectos como la forma, la función, la habitabilidad y la expresión creativa. Los arquitectos suelen tener una formación artística y humanística, además de conocimientos técnicos en construcción y materiales. <em>La Casa de la Ópera de Sídney:</em> Edificio icónico de la arquitectura moderna. Su diseño único y audaz lo convierte en un símbolo reconocible de Sídney, Australia.
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Ingeniería:</strong> Se enfoca en los aspectos técnicos y estructurales de las construcciones, asegurando su estabilidad, seguridad y cumplimiento de normas y regulaciones. Los ingenieros civiles, por ejemplo, calculan cargas, diseñan sistemas estructurales, seleccionan materiales y supervisan la construcción. <em>El Puente Golden Gate:</em> Es uno de los más emblemáticos del mundo. Es una maravilla de la ingeniería y una hazaña de construcción.
        </p>

        <h2 class="blog-subtitle fade-in">Y el vínculo entre ambas:</h2>

        <p class="blog-paragraph fade-in">
          • <strong>Colaboración:</strong> Arquitectos e ingenieros trabajan en conjunto desde las primeras etapas de un proyecto, definiendo el alcance, los requisitos y las soluciones técnicas. La comunicación y colaboración estrecha entre ambas disciplinas es fundamental para el éxito del proyecto.
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Complementariedad:</strong> El diseño arquitectónico no puede ser viable sin la ingeniería que lo respalde, y viceversa. La ingeniería necesita del diseño arquitectónico para darle sentido y propósito a las soluciones técnicas.
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Áreas de intersección:</strong> Existen áreas donde ambas disciplinas se solapan, como en el diseño de estructuras innovadoras, la arquitectura sostenible o la integración de tecnología en los edificios.
        </p>

        <h2 class="blog-subtitle fade-in">Ejemplos de colaboración:</h2>

        <p class="blog-paragraph fade-in">
          • <strong>Diseño de un edificio:</strong> El arquitecto diseña el concepto, la distribución y la estética del edificio, mientras que el ingeniero civil calcula la estructura, define los materiales y supervisa la construcción.
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Planificación urbana:</strong> Los arquitectos y urbanistas diseñan el trazado de las ciudades, considerando aspectos como la movilidad, la densidad poblacional, los espacios públicos y la integración con el entorno. Los ingenieros civiles, por su parte, planifican la infraestructura vial, los sistemas de agua potable y saneamiento, y la gestión de residuos.
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Restauración de edificios históricos:</strong> La intervención en edificios patrimoniales requiere de la colaboración entre arquitectos e ingenieros para conservar el valor histórico y arquitectónico, a la vez que se asegura la seguridad y funcionalidad del edificio.
        </p>

        <p class="blog-paragraph fade-in">
          En resumen, la arquitectura y la ingeniería son disciplinas complementarias que se interrelacionan y colaboran para crear espacios funcionales, seguros y estéticamente agradables. La comprensión de esta relación es fundamental para el desarrollo de proyectos exitosos que satisfagan las necesidades de las personas y en estos tiempos se cuide el entorno, el medio ambiente.
        </p>

        <h2 class="blog-subtitle fade-in">¿Te interesa diseñar espacios que no solo sean funcionales y seguros, sino también innovadores y estéticamente impactantes?</h2>

        <p class="blog-paragraph fade-in">
          Estudia Arquitectura o Ingeniería Civil con nosotros y forma parte de una nueva generación de profesionales capaces de transformar el entorno a través del trabajo colaborativo y la visión integral del diseño y la construcción.
        </p>

        <p class="blog-paragraph fade-in">
          Solicita más información y empieza a construir tu futuro hoy.
        </p>

        <p class="blog-paragraph fade-in font-semibold text-green-600">
          SOLICITAR INFORMACIÓN
        </p>
      </article>
    </div>
  </div>
</Layout>

<style>
/* Blog Content Styles */
.blog-title {
  font-size: 2.5rem;
  color: #001970;
  margin-bottom: 20px;
  max-width: 100%;
  text-align: left;
  font-weight: 700;
  line-height: 1.2;
}

.blog-subtitle {
  color: #001970;
  margin-top: 30px;
  margin-bottom: 16px;
  max-width: 100%;
  text-align: left;
  font-size: 1.6rem;
  font-weight: 700;
  border-left: 4px solid #2a7f62;
  padding-left: 12px;
  line-height: 1.3;
}

.blog-paragraph {
  font-size: 18px;
  line-height: 1.8;
  color: #333;
  max-width: 100%;
  margin-bottom: 16px;
  font-weight: 400;
  text-align: justify;
}

.bibliografia-section {
  font-size: 16px;
  line-height: 1.7;
  margin-top: 40px;
  margin-bottom: 40px;
}

/* Fade-in animations */
.fade-in {
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.6s ease-out forwards;
}

.fade-in:nth-child(1) { animation-delay: 0.1s; }
.fade-in:nth-child(2) { animation-delay: 0.2s; }
.fade-in:nth-child(3) { animation-delay: 0.3s; }
.fade-in:nth-child(4) { animation-delay: 0.4s; }
.fade-in:nth-child(5) { animation-delay: 0.5s; }
.fade-in:nth-child(6) { animation-delay: 0.6s; }
.fade-in:nth-child(7) { animation-delay: 0.7s; }
.fade-in:nth-child(8) { animation-delay: 0.8s; }
.fade-in:nth-child(9) { animation-delay: 0.9s; }
.fade-in:nth-child(10) { animation-delay: 1.0s; }
.fade-in:nth-child(11) { animation-delay: 1.1s; }
.fade-in:nth-child(12) { animation-delay: 1.2s; }
.fade-in:nth-child(13) { animation-delay: 1.3s; }
.fade-in:nth-child(14) { animation-delay: 1.4s; }
.fade-in:nth-child(15) { animation-delay: 1.5s; }

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  // Activar animaciones al hacer scroll
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animationPlayState = 'running';
      }
    });
  }, observerOptions);

  // Observar todos los elementos con fade-in
  document.querySelectorAll('.fade-in').forEach(el => {
    observer.observe(el);
  });
});
</script>