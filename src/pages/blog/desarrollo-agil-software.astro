---
import Layout from "@/layouts/Layout.astro";
import Hero from "@assets/Imagenes/Heros/Blogs/Software.webp"
---

<Layout>
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-slate-50 to-blue-50">
        <div class="max-w-7xl  mx-auto px-2 py-12">
            <!-- Date and Tags -->
            <div class="text-center mb-8">
                <p class="text-red-500 font-semibold text-sm mb-4 fade-in">Julio 2025</p>
                
               
               
            </div>

            <!-- Hero Image Section -->
            <div class="relative fade-in">
                <div class="bg-gradient-to-r from-blue-900 via-blue-800 to-indigo-900 rounded-2xl overflow-hidden shadow-2xl">
                    <div class="relative flex flex-col items-center p-8 md:p-12">
                        <!-- Top - Image Section -->
                        <div class="w-full mb-8">
                            <div class="relative">
                                <div class="bg-gray-800 rounded-lg p-2 shadow-xl transform -rotate-1 hover:rotate-0 transition-transform duration-300">
                                    <div class="bg-blue-900 rounded-md overflow-hidden">
                                        <img 
                                            src={Hero.src}
                                            alt="Software Development Dashboard"
                                            class="hero-image"
                                        />
                                    </div>
                                </div>
                                
                                <!-- Floating Charts -->
                                <div class="absolute -right-4 -top-4 bg-white rounded-lg p-3 shadow-lg transform rotate-12 animate-bounce">
                                    <div class="w-16 h-12 bg-gradient-to-r from-indigo-400 to-purple-500 rounded opacity-80"></div>
                                </div>
                                
                                <div class="absolute -left-4 -bottom-4 bg-white rounded-lg p-2 shadow-lg animate-pulse">
                                    <div class="w-12 h-8 bg-gradient-to-r from-cyan-400 to-blue-500 rounded opacity-80"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Bottom - Text Content -->
                        <div class="w-full text-white text-center">
                            <div class="flex items-center justify-center mb-4">
                                <div class="w-8 h-8 bg-yellow-400 rounded-full flex items-center justify-center mr-3">
                                    <svg class="w-4 h-4 text-gray-900" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <span class="text-yellow-400 font-semibold text-sm">INNOVACIÓN</span>
                            </div>
                            
                            <h2 class="text-3xl md:text-4xl font-bold mb-4 leading-tight">
                                DESARROLLO ÁGIL EN LA<br>
                                INGENIERÍA DE SOFTWARE
                            </h2>
                            
                            <p class="text-blue-100 text-lg mb-6 leading-relaxed">
                                Desarrollo Ágil en la Ingeniería de Software: Adaptándose a los Cambios del Mercado y Mejorando la Colaboración
                            </p>
                            
                            
                        </div>
                    </div>
                    
                </div>


                <!-- Decorative Elements -->
                <div class="absolute -top-6 -left-6 w-24 h-24 border-2 border-dashed border-blue-300 rounded-lg opacity-50"></div>
                <div class="absolute -bottom-4 -right-4 w-16 h-16 border-2 border-dashed border-blue-300 rounded-lg opacity-50"></div>
                
                <!-- Floating Icons -->
                <div class="absolute top-8 -right-4 hidden lg:block">
                    <div class="bg-orange-100 rounded-full p-3 shadow-lg hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                </div>

                <div class="absolute bottom-8 -left-4 hidden lg:block">
                    <div class="bg-green-100 rounded-full p-3 shadow-lg hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                </div>

                 <!-- Tags -->
                <div class="flex flex-wrap justify-center gap-4 mb-12 fade-in mt-12">
                    <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
                        Julio 2025
                    </span>
                    <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
                        Ing. Juan Carlos González Aldana
                    </span>
                    <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
                        Tecnología
                    </span>
                </div>

                <!-- Dotted Connection Lines -->
                <div class="absolute top-8 right-8 w-32 h-0.5 border-t-2 border-dotted border-blue-300 opacity-60 hidden lg:block"></div>
                <div class="absolute bottom-8 left-8 w-24 h-0.5 border-t-2 border-dotted border-blue-300 opacity-60 hidden lg:block"></div>
            </div>
        </div>
    </div>

  <!-- Blog Content -->
  <div class="bg-white">
    <div class="max-w-4xl mx-auto px-6 py-12">
      <article class="prose prose-lg prose-blue max-w-none">
        <h1 class="blog-title fade-in">Desarrollo Ágil en la Ingeniería de Software: Adaptándose a los Cambios del Mercado y Mejorando la Colaboración</h1>

        <p class="blog-paragraph fade-in font-semibold text-green-600">Autor: Ing. Juan Carlos González Aldana</p>

        <p class="blog-paragraph fade-in">
          La Ingeniería en Desarrollo de Software ha evolucionado de manera significativa en los últimos años, adoptando enfoques más flexibles y colaborativos para enfrentar los rápidos cambios del mercado. El Desarrollo Ágil ha emergido como una de las metodologías más efectivas para mejorar la eficiencia, la calidad y la adaptabilidad en el desarrollo de software, permitiendo a los equipos de trabajo responder de manera más eficiente a las necesidades cambiantes de los clientes y usuarios.
        </p>

        <p class="blog-paragraph fade-in">
          En el Centro Universitario UNE, los estudiantes de la carrera de Ingeniería en Desarrollo de Software son formados con un enfoque integral que incluye el dominio de metodologías ágiles, como Scrum y Kanban, y cómo estás pueden aplicarse para optimizar el ciclo de vida del desarrollo de software. Esta formación les proporciona las habilidades necesarias para colaborar en equipos multidisciplinarios y desarrollar software de alta calidad que se ajuste a las exigencias del mercado.
        </p>

        <h2 class="blog-subtitle fade-in">El Desarrollo Ágil: ¿Qué lo hace diferente?</h2>

        <p class="blog-paragraph fade-in">
          A diferencia de los enfoques tradicionales de desarrollo de software, las metodologías ágiles enfatizan la flexibilidad, la colaboración continua y la entrega incremental de productos. El objetivo principal es adaptar el software a los cambios del mercado, mejorando la satisfacción del cliente y reduciendo el tiempo de entrega.
        </p>

        <p class="blog-paragraph fade-in">
          En el Centro Universitario UNE, los estudiantes de Ingeniería en Desarrollo de Software reciben formación en las metodologías ágiles más utilizadas en la industria, como Scrum, Kanban, y XP (Extreme Programming). Estas metodologías les permiten gestionar proyectos de software de manera más eficiente, respondiendo rápidamente a los cambios en los requisitos y mejorando la calidad del producto final.
        </p>

        <h2 class="blog-subtitle fade-in">Beneficios del Desarrollo Ágil: más que sólo rapidez</h2>

        <p class="blog-paragraph fade-in">
          El Desarrollo Ágil no solo se trata de entregar software rápidamente; también implica una mayor calidad, colaboración y satisfacción del cliente. A través de iteraciones cortas y un enfoque continuo en la retroalimentación, los equipos de desarrollo pueden identificar problemas rápidamente y hacer los ajustes necesarios para mejorar el producto.
        </p>

        <p class="blog-paragraph fade-in">
          En el Centro Universitario UNE, los estudiantes de Ingeniería en Desarrollo de Software trabajan en proyectos prácticos que les permiten experimentar de primera mano los beneficios de las metodologías ágiles. Estos proyectos les enseñan a priorizar tareas de manera efectiva, gestionar recursos de forma eficiente y mantener una comunicación constante con los stakeholders para asegurar que el producto final cumpla con las expectativas del cliente.
        </p>

        <h2 class="blog-subtitle fade-in">Adaptación a los cambios del mercado: Flexibilidad y Resiliencia</h2>

        <p class="blog-paragraph fade-in">
          Uno de los mayores desafíos en el desarrollo de software es adaptarse a los cambios constantes en las necesidades del mercado. Las empresas deben ser capaces de modificar sus productos rápidamente para mantenerse competitivas. El Desarrollo Ágil permite a los equipos de desarrollo adaptarse a estos cambios sin comprometer la calidad ni la eficiencia.
        </p>

        <p class="blog-paragraph fade-in">
          En UNE, los estudiantes de Ingeniería en Desarrollo de Software son capacitados para implementar procesos ágiles que permiten una respuesta rápida ante los cambios del mercado. La formación incluye el uso de herramientas de gestión de proyectos ágiles y técnicas de integración continua, que ayudan a mantener un flujo constante de trabajo y a garantizar que el software se pueda actualizar con rapidez y sin errores.
        </p>

        <h2 class="blog-subtitle fade-in">Mejora de la Colaboración: La clave del éxito en los equipos ágiles</h2>

        <p class="blog-paragraph fade-in">
          El Desarrollo Ágil fomenta la colaboración no solo entre los miembros del equipo de desarrollo, sino también con otros departamentos, como marketing, ventas y atención al cliente. Esta colaboración constante asegura que el producto final esté alineado con las expectativas del cliente y que cualquier cambio necesario se pueda implementar de manera rápida y eficiente.
        </p>

        <p class="blog-paragraph fade-in">
          El programa en UNE, se enseña a los estudiantes de Ingeniería en Desarrollo de Software cómo trabajar de manera efectiva en equipos multidisciplinarios. A través de proyectos colaborativos y actividades de integración, los estudiantes desarrollan habilidades interpersonales y de comunicación que son esenciales para el éxito en entornos ágiles.
        </p>

        <h2 class="blog-subtitle fade-in">El Futuro del Desarrollo Ágil: Tendencias Emergentes y Nuevas Herramientas</h2>

        <p class="blog-paragraph fade-in">
          La adopción de metodologías ágiles está en constante evolución. Nuevas herramientas y técnicas están emergiendo para hacer que los equipos de desarrollo sean aún más eficientes. Las herramientas de gestión de proyectos ágiles, como Jira, Trello y Asana, están siendo complementadas por plataformas de DevOps y automatización de pruebas que optimizan aún más el ciclo de vida del software.
        </p>

        <p class="blog-paragraph fade-in">
          El Centro Universitario UNE capacita en el uso de estás herramientas emergentes, lo que les permite estar a la vanguardia de las últimas tendencias tecnológicas. La formación práctica en el uso de plataformas de integración continua y automatización les proporciona las habilidades necesarias para trabajar en equipos ágiles de alto rendimiento.
        </p>

        <h2 class="blog-subtitle fade-in">Conclusión: Preparando a los Desarrolladores de Software para un Mundo Ágil</h2>

        <p class="blog-paragraph fade-in">
          El Desarrollo Ágil ha cambiado la forma en que se desarrollan los productos de software, y los ingenieros de software de hoy deben estar preparados para trabajar en entornos ágiles que fomenten la colaboración y la flexibilidad. En el Centro Universitario UNE, los estudiantes de la carrera de Ingeniería en Desarrollo de Software están siendo formados con una base sólida en las metodologías ágiles, herramientas avanzadas y habilidades colaborativas, lo que les permitirá liderar proyectos exitosos y adaptarse a los cambios rápidos del mercado.
        </p>

        <p class="blog-paragraph fade-in">
          El enfoque práctico y actualizado de la Ingeniería en Desarrollo de Software asegura que los futuros ingenieros estén completamente preparados para enfrentar los desafíos del desarrollo ágil y convertirse en profesionales altamente competentes en un mundo cada vez más dinámico y competitivo.
        </p>

        <section id="bibliografia" class="bibliografia-section fade-in">
          <h2 class="text-2xl font-bold text-green-600 mb-6 border-l-4 border-green-600 pl-4">Referencias Bibliográficas</h2>
          <ol class="space-y-3 text-gray-700 leading-relaxed">
            <li>Schwaber, K., &amp; Beedle, M. (2002). Agile Software Development with Scrum. Pearson Education.</li>
            <li>Cockburn, A. (2006). Agile Software Development: The Cooperative Game (2nd ed.). Addison-Wesley.</li>
            <li>Pichler, R. (2010). Agile Product Management with Scrum: Creating Products that Customers Love. Addison-Wesley.</li>
            <li>Beck, K., &amp; Andres, C. (2004). Extreme Programming Explained: Embrace Change (2nd ed.). Addison-Wesley.</li>
          </ol>
        </section>
      </article>
    </div>
  </div>
</Layout>

<style>
/* Blog Content Styles */
.blog-title {
  font-size: 2.5rem;
  color: #001970;
  margin-bottom: 20px;
  max-width: 100%;
  text-align: left;
  font-weight: 700;
  line-height: 1.2;
}

.blog-subtitle {
  color: #001970;
  margin-top: 30px;
  margin-bottom: 16px;
  max-width: 100%;
  text-align: left;
  font-size: 1.6rem;
  font-weight: 700;
  border-left: 4px solid #2a7f62;
  padding-left: 12px;
  line-height: 1.3;
}

.blog-paragraph {
  font-size: 18px;
  line-height: 1.8;
  color: #333;
  max-width: 100%;
  margin-bottom: 16px;
  font-weight: 400;
  text-align: justify;
}

.bibliografia-section {
  font-size: 16px;
  line-height: 1.7;
  margin-top: 40px;
  margin-bottom: 40px;
}

/* Fade-in animations */
.fade-in {
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.6s ease-out forwards;
}

.fade-in:nth-child(1) { animation-delay: 0.1s; }
.fade-in:nth-child(2) { animation-delay: 0.2s; }
.fade-in:nth-child(3) { animation-delay: 0.3s; }
.fade-in:nth-child(4) { animation-delay: 0.4s; }
.fade-in:nth-child(5) { animation-delay: 0.5s; }
.fade-in:nth-child(6) { animation-delay: 0.6s; }
.fade-in:nth-child(7) { animation-delay: 0.7s; }
.fade-in:nth-child(8) { animation-delay: 0.8s; }
.fade-in:nth-child(9) { animation-delay: 0.9s; }
.fade-in:nth-child(10) { animation-delay: 1.0s; }
.fade-in:nth-child(11) { animation-delay: 1.1s; }
.fade-in:nth-child(12) { animation-delay: 1.2s; }
.fade-in:nth-child(13) { animation-delay: 1.3s; }
.fade-in:nth-child(14) { animation-delay: 1.4s; }
.fade-in:nth-child(15) { animation-delay: 1.5s; }

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  // Activar animaciones al hacer scroll
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animationPlayState = 'running';
      }
    });
  }, observerOptions);

  // Observar todos los elementos con fade-in
  document.querySelectorAll('.fade-in').forEach(el => {
    observer.observe(el);
  });
});
</script>