const imageModules = import.meta.glob('/src/assets/Imagenes/Heros/Blogs/*.(png|jpg|jpeg|webp)', { 
  eager: true,
  import: 'default'
});

// Función helper más robusta
function getImageUrl(imageName: string): string {
  for (const [path, module] of Object.entries(imageModules)) {
    if (path.toLowerCase().includes(imageName.toLowerCase())) {
      return (module as any).src || '';
    }
  }
  return '';
}

