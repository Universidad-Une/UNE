---
import Layout from "@/layouts/Layout.astro";
import Hero from "@assets/Imagenes/Heros/Blogs/Blog_cultura_fisica.webp"
---

<Layout>
  <!-- Hero Section -->
 <div class="relative overflow-hidden bg-gradient-to-br from-slate-50 to-blue-50">
        <div class="max-w-7xl  mx-auto px-2 py-12">
            <!-- Date and Tags -->
            <div class="text-center mb-8">
                <p class="text-red-500 font-semibold text-sm mb-4 fade-in">Octubre 2024</p>
                
               
               
            </div>

            <!-- Hero Image Section -->
            <div class="relative fade-in">
                <div class="bg-gradient-to-r from-blue-900 via-blue-800 to-indigo-900 rounded-2xl overflow-hidden shadow-2xl">
                    <div class="relative flex flex-col items-center p-8 md:p-12">
                        <!-- Top - Image Section -->
                        <div class="w-full mb-8">
                            <div class="relative">
                                <div class="bg-gray-800 rounded-lg p-2 shadow-xl transform -rotate-1 hover:rotate-0 transition-transform duration-300">
                                    <div class="bg-blue-900 rounded-md overflow-hidden">
                                        <img 
                                            src={Hero.src}
                                            alt="Educational Sports Dashboard"
                                            class="hero-image"
                                        />
                                    </div>
                                </div>
                                
                                <!-- Floating Charts -->
                                <div class="absolute -right-4 -top-4 bg-white rounded-lg p-3 shadow-lg transform rotate-12 animate-bounce">
                                    <div class="w-16 h-12 bg-gradient-to-r from-green-400 to-blue-500 rounded opacity-80"></div>
                                </div>
                                
                                <div class="absolute -left-4 -bottom-4 bg-white rounded-lg p-2 shadow-lg animate-pulse">
                                    <div class="w-12 h-8 bg-gradient-to-r from-orange-400 to-yellow-400 rounded opacity-80"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Bottom - Text Content -->
                        <div class="w-full text-white text-center">
                            <div class="flex items-center justify-center mb-4">
                                <div class="w-8 h-8 bg-yellow-400 rounded-full flex items-center justify-center mr-3">
                                    <svg class="w-4 h-4 text-gray-900" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <span class="text-yellow-400 font-semibold text-sm">EDUCACIÓN</span>
                            </div>
                            
                            <h2 class="text-3xl md:text-4xl font-bold mb-4 leading-tight">
                                ACTUALIZACIÓN CONTINUA<br>
                                EN CULTURA FÍSICA
                            </h2>
                            
                            <p class="text-blue-100 text-lg mb-6 leading-relaxed">
                                En Jalisco a la luz de la legislación deportiva: Evolución profesional y marcos normativos
                            </p>
                            
                            
                        </div>
                    </div>
                    
                </div>


                <!-- Decorative Elements -->
                <div class="absolute -top-6 -left-6 w-24 h-24 border-2 border-dashed border-blue-300 rounded-lg opacity-50"></div>
                <div class="absolute -bottom-4 -right-4 w-16 h-16 border-2 border-dashed border-blue-300 rounded-lg opacity-50"></div>
                
                <!-- Floating Icons -->
                <div class="absolute top-8 -right-4 hidden lg:block">
                    <div class="bg-orange-100 rounded-full p-3 shadow-lg hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
                        </svg>
                    </div>
                </div>

                <div class="absolute bottom-8 -left-4 hidden lg:block">
                    <div class="bg-green-100 rounded-full p-3 shadow-lg hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                </div>

                 <!-- Tags -->
                <div class="flex flex-wrap justify-center gap-4 mb-12 fade-in mt-12">
                    <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
                        Octubre 2024
                    </span>
                    <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
                        Lic. CFYD Luis Fernando García
                    </span>
                    <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
                        Legislación Deportiva
                    </span>
                </div>

                <!-- Dotted Connection Lines -->
                <div class="absolute top-8 right-8 w-32 h-0.5 border-t-2 border-dotted border-blue-300 opacity-60 hidden lg:block"></div>
                <div class="absolute bottom-8 left-8 w-24 h-0.5 border-t-2 border-dotted border-blue-300 opacity-60 hidden lg:block"></div>
            </div>
        </div>
    </div>

  <!-- Blog Content -->
  <div class="bg-white">
    <div class="max-w-4xl mx-auto px-6 py-12">
      <article class="prose prose-lg prose-blue max-w-none">
        <h1 class="blog-title fade-in">La importancia de la actualización continua en la Licenciatura en Cultura Física y Deportes en Jalisco a la luz de la legislación deportiva</h1>

        <p class="blog-paragraph fade-in font-semibold text-green-600">Escrito por: Lic. CFYD Luis Fernando García Reynoso Coordinador de la Lic. En Cultura Física y Deportes</p>

        <p class="blog-paragraph fade-in">
          La Licenciatura en Cultura Física y Deportes es una disciplina en constante evolución, marcada por avances científicos, tecnológicos y sociales. En este contexto, la actualización profesional se convierte en un pilar fundamental para garantizar la calidad de los servicios ofrecidos por los egresados de esta carrera, especialmente en un estado como Jalisco, reconocido por su tradición deportiva y su compromiso con la promoción de la actividad física.
        </p>

        <h2 class="blog-subtitle fade-in">La legislación deportiva como marco normativo</h2>

        <p class="blog-paragraph fade-in">
          La legislación deportiva en México, y en particular en Jalisco, establece una serie de lineamientos y requisitos que los profesionales de la cultura física y el deporte deben cumplir. Estos marcos normativos buscan garantizar la seguridad, la calidad y la equidad en la práctica deportiva, así como la protección de los derechos de los deportistas. Al mantenerse actualizados en los conocimientos y habilidades requeridos por la legislación, los profesionales del deporte contribuyen a:
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Cumplir con los estándares de calidad:</strong> Los programas de estudio y las prácticas profesionales deben estar alineados con las normativas vigentes, asegurando que los egresados estén capacitados para desempeñar sus funciones de manera competente y ética.
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Garantizar la seguridad de los deportistas:</strong> El conocimiento de las normas de seguridad y prevención de lesiones es fundamental para proteger la integridad física de los atletas y participantes en actividades físicas.
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Promover la equidad y la inclusión:</strong> La legislación deportiva fomenta la igualdad de oportunidades y el acceso al deporte para todos, sin discriminación. Los profesionales deben estar preparados para trabajar en entornos diversos y promover valores como el respeto y la tolerancia.
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Fomentar el desarrollo del deporte en Jalisco:</strong> La actualización continua permite a los profesionales estar al tanto de las últimas tendencias y estrategias para el desarrollo del deporte en el estado, contribuyendo así al fortalecimiento del sector.
        </p>

        <h2 class="blog-subtitle fade-in">Los beneficios de la actualización profesional</h2>

        <p class="blog-paragraph fade-in">
          Además de cumplir con los requisitos legales, la actualización profesional ofrece numerosos beneficios para los egresados de la Licenciatura en Cultura Física y Deportes, entre ellos:
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Ampliación de conocimientos:</strong> Los cursos, capacitaciones y congresos permiten acceder a nuevos conocimientos científicos y técnicos, lo que enriquece la práctica profesional y facilita la resolución de problemas complejos.
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Desarrollo de habilidades:</strong> La participación en actividades de actualización favorece el desarrollo de habilidades como la comunicación, el liderazgo, la gestión de proyectos y el trabajo en equipo.
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Fortalecimiento de la red de contactos:</strong> Los eventos académicos y profesionales son una excelente oportunidad para conocer a otros colegas, intercambiar experiencias y establecer relaciones profesionales.
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Mayor empleabilidad:</strong> Los profesionales actualizados y certificados son más atractivos para las instituciones deportivas, los centros de entrenamiento y las empresas del sector.
        </p>

        <p class="blog-paragraph fade-in">
          • <strong>Contribución al desarrollo personal:</strong> La formación continua estimula el crecimiento personal y profesional, fomentando la curiosidad, la creatividad y el espíritu crítico.
        </p>

        <p class="blog-paragraph fade-in">
          La Universidad de Especialidades UNE, comprometida con dar apoyo y seguimiento a sus alumnos y egresados, presenta el 1er Congreso UNE de Terapia Física y Cultura Física del 29 al 31 de octubre del 2024 en Puerto Vallarta, Jalisco. ¡No Faltes!
        </p>

        <p class="blog-paragraph fade-in font-semibold text-green-600">
          en Comunidad UNE
        </p>
      </article>
    </div>
  </div>
</Layout>

<style>
/* Blog Content Styles */
.blog-title {
  font-size: 2.5rem;
  color: #001970;
  margin-bottom: 20px;
  max-width: 100%;
  text-align: left;
  font-weight: 700;
  line-height: 1.2;
}

.blog-subtitle {
  color: #001970;
  margin-top: 30px;
  margin-bottom: 16px;
  max-width: 100%;
  text-align: left;
  font-size: 1.6rem;
  font-weight: 700;
  border-left: 4px solid #2a7f62;
  padding-left: 12px;
  line-height: 1.3;
}

.blog-paragraph {
  font-size: 18px;
  line-height: 1.8;
  color: #333;
  max-width: 100%;
  margin-bottom: 16px;
  font-weight: 400;
  text-align: justify;
}

.bibliografia-section {
  font-size: 16px;
  line-height: 1.7;
  margin-top: 40px;
  margin-bottom: 40px;
}

/* Fade-in animations */
.fade-in {
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.6s ease-out forwards;
}

.fade-in:nth-child(1) { animation-delay: 0.1s; }
.fade-in:nth-child(2) { animation-delay: 0.2s; }
.fade-in:nth-child(3) { animation-delay: 0.3s; }
.fade-in:nth-child(4) { animation-delay: 0.4s; }
.fade-in:nth-child(5) { animation-delay: 0.5s; }
.fade-in:nth-child(6) { animation-delay: 0.6s; }
.fade-in:nth-child(7) { animation-delay: 0.7s; }
.fade-in:nth-child(8) { animation-delay: 0.8s; }
.fade-in:nth-child(9) { animation-delay: 0.9s; }
.fade-in:nth-child(10) { animation-delay: 1.0s; }
.fade-in:nth-child(11) { animation-delay: 1.1s; }
.fade-in:nth-child(12) { animation-delay: 1.2s; }
.fade-in:nth-child(13) { animation-delay: 1.3s; }
.fade-in:nth-child(14) { animation-delay: 1.4s; }
.fade-in:nth-child(15) { animation-delay: 1.5s; }

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  // Activar animaciones al hacer scroll
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animationPlayState = 'running';
      }
    });
  }, observerOptions);

  // Observar todos los elementos con fade-in
  document.querySelectorAll('.fade-in').forEach(el => {
    observer.observe(el);
  });
});
</script>