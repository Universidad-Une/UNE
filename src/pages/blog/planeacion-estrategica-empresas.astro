---
import Layout from "@/layouts/Layout.astro";
import Hero from "@assets/Imagenes/Heros/Blogs/Software.webp"
---

<Layout>
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-slate-50 to-blue-50">
    <div class="max-w-6xl mx-auto px-6 py-12">
      <!-- Date and Tags -->
      <div class="text-center mb-8">
        <p class="text-red-500 font-semibold text-sm mb-4 fade-in">Septiembre 2024</p>
        
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 max-w-4xl mx-auto leading-tight fade-in">
          La Planeación Estratégica en las Empresas
        </h1>
        
        <p class="text-lg text-gray-600 mb-8 max-w-3xl mx-auto leading-relaxed fade-in">
          Proceso indispensable para el éxito permanente de cualquier organización en entornos competitivos
        </p>

        <!-- Tags -->
        <div class="flex flex-wrap justify-center gap-4 mb-12 fade-in">
          <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
            Septiembre 2024
          </span>
          <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
            Lic. Christian Gilberto Solórzano Valdez
          </span>
          <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
            Administración
          </span>
        </div>
      </div>

      <!-- Hero Image Section -->
      <div class="relative fade-in">
        <div class="bg-gradient-to-r from-blue-900 via-blue-800 to-indigo-900 rounded-2xl overflow-hidden shadow-2xl">
          <div class="relative flex flex-col lg:flex-row items-center justify-between p-8 md:p-12">
            <!-- Left Side - Laptop Mockup -->
            <div class="flex-shrink-0 mb-8 lg:mb-0">
              <div class="relative">
                <div class="bg-gray-800 rounded-lg p-2 shadow-xl transform -rotate-6 hover:rotate-0 transition-transform duration-300">
                  <div class="bg-blue-900 rounded-md overflow-hidden">
                    <img 
                      src={Hero} 
                      alt="Strategic Planning Dashboard"
                      class="w-80 h-48 object-cover"
                    />
                  </div>
                </div>
                
                <!-- Floating Charts -->
                <div class="absolute -right-8 -top-4 bg-white rounded-lg p-3 shadow-lg transform rotate-12 animate-bounce">
                  <div class="w-16 h-12 bg-gradient-to-r from-blue-400 to-purple-500 rounded opacity-80"></div>
                </div>
                
                <div class="absolute -left-6 -bottom-6 bg-white rounded-lg p-2 shadow-lg animate-pulse">
                  <div class="w-12 h-8 bg-gradient-to-r from-green-400 to-blue-400 rounded opacity-80"></div>
                </div>
              </div>
            </div>

            <!-- Right Side - Text Content -->
            <div class="flex-1 lg:ml-12 text-white text-center lg:text-left">
              <div class="flex items-center justify-center lg:justify-start mb-4">
                <div class="w-8 h-8 bg-yellow-400 rounded-full flex items-center justify-center mr-3">
                  <svg class="w-4 h-4 text-gray-900" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span class="text-yellow-400 font-semibold text-sm">ESTRATEGIA</span>
              </div>
              
              <h2 class="text-3xl md:text-4xl font-bold mb-4 leading-tight">
                PLANEACIÓN<br>
                ESTRATÉGICA
              </h2>
              
              <p class="text-blue-100 text-lg mb-6 leading-relaxed">
                Herramienta esencial para el éxito empresarial
              </p>
              
              <div class="flex items-center justify-center lg:justify-start space-x-4">
                <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                <span class="text-green-400 text-sm font-medium">En línea</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Decorative Elements -->
        <div class="absolute -top-6 -left-6 w-24 h-24 border-2 border-dashed border-blue-300 rounded-lg opacity-50"></div>
        <div class="absolute -bottom-4 -right-4 w-16 h-16 border-2 border-dashed border-blue-300 rounded-lg opacity-50"></div>
        
        <!-- Floating Icons -->
        <div class="absolute top-1/2 -right-8 transform -translate-y-1/2 hidden lg:block">
          <div class="bg-orange-100 rounded-full p-3 shadow-lg hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
            </svg>
          </div>
        </div>

        <div class="absolute bottom-12 -left-8 hidden lg:block">
          <div class="bg-green-100 rounded-full p-3 shadow-lg hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>

        <!-- Dotted Connection Lines -->
        <div class="absolute top-20 right-12 w-32 h-0.5 border-t-2 border-dotted border-blue-300 opacity-60 hidden lg:block"></div>
        <div class="absolute bottom-20 left-12 w-24 h-0.5 border-t-2 border-dotted border-blue-300 opacity-60 hidden lg:block"></div>
      </div>
    </div>
  </div>

  <!-- Blog Content -->
  <div class="bg-white">
    <div class="max-w-4xl mx-auto px-6 py-12">
      <article class="prose prose-lg prose-blue max-w-none">
        <h1 class="blog-title fade-in">La Planeación Estratégica en las Empresas</h1>

        <p class="blog-paragraph fade-in font-semibold text-green-600">Autora: Escrito por: - Lic. Christian Gilberto Solórzano Valdez -</p>

        <p class="blog-paragraph fade-in">
          La planeación estratégica es un proceso indispensable para el éxito permanente de cualquier organización. Implica el establecimiento de metas y objetivos claros, identificar recursos disponibles (humanos, tecnológicos, financieros) y diseñar planes de acción coherentes para alcanzar las metas. Ante el entorno altamente dinámico y competitivo en el que se encuentran las empresas, la planeación estratégica se convierte en una herramienta esencial para anticipar y adaptarse a los cambios, además de aprovechar las oportunidades emergentes.
        </p>

        <h2 class="blog-subtitle fade-in">Elementos a considerar en la Planeación Estratégica</h2>

        <h2 class="blog-subtitle fade-in">Identificación del Entorno</h2>

        <p class="blog-paragraph fade-in">
          Un elemento indispensable para la planeación estratégica es comprender ampliamente el entorno en el que se desarrolla la organización. Esto implica que se analicen factores internos (variables que se pueden controlar en la empresa) y externos (variables que no se pueden controlar en la empresa). Estos factores pueden afectar el desempeño de la empresa de manera positiva o negativa. Las herramientas comunes para este análisis incluyen el análisis FODA (Fortalezas, Oportunidades, Debilidades y Amenazas), así como el análisis PESTEL (Político, Económico, Social, Tecnológico, Ambiental y Legal). Estos tipos de análisis nos brindan una base sólida para identificar oportunidades y amenazas, y así poder elaborar estrategias altamente efectivas.
        </p>

        <h2 class="blog-subtitle fade-in">Establecimiento de Objetivos Claros</h2>

        <p class="blog-paragraph fade-in">
          Una vez que se ha realizado un análisis exhaustivo del entorno, es fundamental establecer objetivos claros y alcanzables. Los objetivos a implementar en la planeación estratégica deben ser específicos, medibles, alcanzables, relevantes y limitados en el tiempo (también conocidos como objetivos SMART, por sus siglas en inglés). Al definir metas concretas, la organización puede dirigir sus esfuerzos de manera efectiva y medir su progreso de manera significativa a lo largo del tiempo.
        </p>

        <h2 class="blog-subtitle fade-in">Involucramiento de las Partes Interesadas</h2>

        <p class="blog-paragraph fade-in">
          Uno de los elementos más importantes en la planeación estratégica es entender que no es un proceso aislado que se lleva a cabo únicamente por los líderes de la organización. Es de vital importancia involucrar a todas las partes interesadas de la empresa, incluidos empleados, clientes, proveedores, accionistas y la comunidad en general. El compromiso a trabajar con estas partes interesadas no solo garantiza una comprensión completa de los desafíos y oportunidades, sino que también fomenta un sentido de responsabilidad compartida entre los miembros enfocados hacia la ejecución del plan estratégico.
        </p>

        <h2 class="blog-subtitle fade-in">Flexibilidad y Adaptabilidad</h2>

        <p class="blog-paragraph fade-in">
          Aunque la planeación estratégica implica el establecimiento de objetivos claramente definidos, también es importante que sea flexible y adaptable a medida que cambian las circunstancias. Las organizaciones deben estar dispuestas a modificar sus estrategias en respuesta a cambios repentinos en el mercado, avances tecnológicos, regulaciones de gobierno y otros factores externos. La capacidad de adaptación es fundamental para mantener la relevancia y la competitividad empresarial a largo plazo.
        </p>

        <h2 class="blog-subtitle fade-in">Monitoreo y Evaluación Continua</h2>

        <p class="blog-paragraph fade-in">
          Una vez que se desarrolla e implementa el plan estratégico, el proceso debe continuar puesto que no termina ahí. Es fundamental que en la empresa se establezcan sistemas de monitoreo y evaluación para medir el progreso hacia la consecución de los objetivos establecidos, para identificar cualquier desviación o áreas de mejora. Estos sistemas deben ser ágiles y proporcionar retroalimentación periódica que permita a las empresas realizar ajustes en tiempo real según sea necesario.
        </p>

        <p class="blog-paragraph fade-in">
          Podemos concluir señalando que, la planeación estratégica es un proceso dinámico y continuo que requiere un enfoque sistemático y una visión empresarial a largo plazo. Al adoptar y trabajar los elementos efectivos anteriormente mencionados, las organizaciones pueden mejorar su capacidad para enfrentar los desafíos y aprovechar las oportunidades en un entorno empresarial cada vez más complejo y generar un mejor posicionamiento en el mercado.
        </p>

        <p class="blog-paragraph fade-in">
          Como institución líder en el occidente del país y refrendando nuestro compromiso social, en Centro Universitario UNE formamos profesionales de la Licenciatura en Administración con los conocimientos, técnicas y habilidades necesarias para diseñar planes estratégicos que guíen a las organizaciones por un camino hacia la excelencia.
        </p>

        <p class="blog-paragraph fade-in font-semibold text-green-600">
          SOLICITAR INFORMACIÓN
        </p>

        <section id="bibliografia" class="bibliografia-section fade-in">
          <h2 class="text-2xl font-bold text-green-600 mb-6 border-l-4 border-green-600 pl-4">Consulta bibliográfica de interés</h2>
          <ol class="space-y-3 text-gray-700 leading-relaxed">
            <li>Hill, C. W. L., Jones, G. R., & Schilling, M. A. (2017). <em>Strategic Management: Theory: An Integrated Approach</em> (12th ed.). Cengage Learning.</li>
            <li>Johnson, G., Whittington, R., Scholes, K., Angwin, D., & Regnér, P. (2017). <em>Exploring Strategy: Text and Cases</em> (11th ed.). Pearson.</li>
            <li>David, F. R., & David, F. R. (2016). <em>Strategic Management: A Competitive Advantage Approach, Concepts and Cases</em> (16th ed.). Pearson.</li>
            <li>Hitt, M. A., Ireland, R. D., & Hoskisson, R. E. (2015). <em>Administración Estratégica: Competitividad y Conceptos de Globalización</em>. Cengage Learning.</li>
            <li>Thompson, A. A., Peteraf, M. A., Gamble, J. E., & Strickland III, A. J. (2016). <em>Administración Estratégica: Teoría y Casos</em>. McGraw-Hill Interamericana.</li>
            <li>Mintzberg, H., Ahlstrand, B., & Lampel, J. (2011). <em>Safari a la Estrategia: Un Tour por la Selva de la Administración Estratégica</em>. Ediciones Granica</li>
          </ol>
        </section>
      </article>
    </div>
  </div>
</Layout>

<style>
/* Blog Content Styles */
.blog-title {
  font-size: 2.5rem;
  color: #001970;
  margin-bottom: 20px;
  max-width: 100%;
  text-align: left;
  font-weight: 700;
  line-height: 1.2;
}

.blog-subtitle {
  color: #001970;
  margin-top: 30px;
  margin-bottom: 16px;
  max-width: 100%;
  text-align: left;
  font-size: 1.6rem;
  font-weight: 700;
  border-left: 4px solid #2a7f62;
  padding-left: 12px;
  line-height: 1.3;
}

.blog-paragraph {
  font-size: 18px;
  line-height: 1.8;
  color: #333;
  max-width: 100%;
  margin-bottom: 16px;
  font-weight: 400;
  text-align: justify;
}

.bibliografia-section {
  font-size: 16px;
  line-height: 1.7;
  margin-top: 40px;
  margin-bottom: 40px;
}

/* Fade-in animations */
.fade-in {
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.6s ease-out forwards;
}

.fade-in:nth-child(1) { animation-delay: 0.1s; }
.fade-in:nth-child(2) { animation-delay: 0.2s; }
.fade-in:nth-child(3) { animation-delay: 0.3s; }
.fade-in:nth-child(4) { animation-delay: 0.4s; }
.fade-in:nth-child(5) { animation-delay: 0.5s; }
.fade-in:nth-child(6) { animation-delay: 0.6s; }
.fade-in:nth-child(7) { animation-delay: 0.7s; }
.fade-in:nth-child(8) { animation-delay: 0.8s; }
.fade-in:nth-child(9) { animation-delay: 0.9s; }
.fade-in:nth-child(10) { animation-delay: 1.0s; }
.fade-in:nth-child(11) { animation-delay: 1.1s; }
.fade-in:nth-child(12) { animation-delay: 1.2s; }
.fade-in:nth-child(13) { animation-delay: 1.3s; }
.fade-in:nth-child(14) { animation-delay: 1.4s; }
.fade-in:nth-child(15) { animation-delay: 1.5s; }

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  // Activar animaciones al hacer scroll
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animationPlayState = 'running';
      }
    });
  }, observerOptions);

  // Observar todos los elementos con fade-in
  document.querySelectorAll('.fade-in').forEach(el => {
    observer.observe(el);
  });
});
</script>