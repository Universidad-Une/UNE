---
import Layout from "@/layouts/Layout.astro";
import Hero from "@assets/Imagenes/Heros/Blogs/Software.webp"
---

<Layout>
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-slate-50 to-blue-50">
    <div class="max-w-6xl mx-auto px-6 py-12">
      <!-- Date and Tags -->
      <div class="text-center mb-8">
        <p class="text-red-500 font-semibold text-sm mb-4 fade-in">Octubre 2024</p>
        
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 max-w-4xl mx-auto leading-tight fade-in">
          Enfermería: Una Buena Opción Profesional
        </h1>
        
        <p class="text-lg text-gray-600 mb-8 max-w-3xl mx-auto leading-relaxed fade-in">
          Una profesión de vocación, servicio y reconocimiento mundial en el cuidado de la salud
        </p>

        <!-- Tags -->
        <div class="flex flex-wrap justify-center gap-4 mb-12 fade-in">
          <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
            Octubre 2024
          </span>
          <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
            Centro Universitario UNE
          </span>
          <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
            Enfermería
          </span>
        </div>
      </div>

      <!-- Hero Image Section -->
      <div class="relative fade-in">
        <div class="bg-gradient-to-r from-blue-900 via-blue-800 to-indigo-900 rounded-2xl overflow-hidden shadow-2xl">
          <div class="relative flex flex-col lg:flex-row items-center justify-between p-8 md:p-12">
            <!-- Left Side - Laptop Mockup -->
            <div class="flex-shrink-0 mb-8 lg:mb-0">
              <div class="relative">
                <div class="bg-gray-800 rounded-lg p-2 shadow-xl transform -rotate-6 hover:rotate-0 transition-transform duration-300">
                  <div class="bg-blue-900 rounded-md overflow-hidden">
                    <img 
                      src={Hero} 
                      alt="Nursing Dashboard"
                      class="w-80 h-48 object-cover"
                    />
                  </div>
                </div>
                
                <!-- Floating Charts -->
                <div class="absolute -right-8 -top-4 bg-white rounded-lg p-3 shadow-lg transform rotate-12 animate-bounce">
                  <div class="w-16 h-12 bg-gradient-to-r from-blue-400 to-purple-500 rounded opacity-80"></div>
                </div>
                
                <div class="absolute -left-6 -bottom-6 bg-white rounded-lg p-2 shadow-lg animate-pulse">
                  <div class="w-12 h-8 bg-gradient-to-r from-green-400 to-blue-400 rounded opacity-80"></div>
                </div>
              </div>
            </div>

            <!-- Right Side - Text Content -->
            <div class="flex-1 lg:ml-12 text-white text-center lg:text-left">
              <div class="flex items-center justify-center lg:justify-start mb-4">
                <div class="w-8 h-8 bg-yellow-400 rounded-full flex items-center justify-center mr-3">
                  <svg class="w-4 h-4 text-gray-900" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span class="text-yellow-400 font-semibold text-sm">PROFESIÓN</span>
              </div>
              
              <h2 class="text-3xl md:text-4xl font-bold mb-4 leading-tight">
                ENFERMERÍA<br>
                PROFESIONAL
              </h2>
              
              <p class="text-blue-100 text-lg mb-6 leading-relaxed">
                Vocación, servicio y excelencia académica
              </p>
              
              <div class="flex items-center justify-center lg:justify-start space-x-4">
                <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                <span class="text-green-400 text-sm font-medium">En línea</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Decorative Elements -->
        <div class="absolute -top-6 -left-6 w-24 h-24 border-2 border-dashed border-blue-300 rounded-lg opacity-50"></div>
        <div class="absolute -bottom-4 -right-4 w-16 h-16 border-2 border-dashed border-blue-300 rounded-lg opacity-50"></div>
        
        <!-- Floating Icons -->
        <div class="absolute top-1/2 -right-8 transform -translate-y-1/2 hidden lg:block">
          <div class="bg-orange-100 rounded-full p-3 shadow-lg hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
            </svg>
          </div>
        </div>

        <div class="absolute bottom-12 -left-8 hidden lg:block">
          <div class="bg-green-100 rounded-full p-3 shadow-lg hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>

        <!-- Dotted Connection Lines -->
        <div class="absolute top-20 right-12 w-32 h-0.5 border-t-2 border-dotted border-blue-300 opacity-60 hidden lg:block"></div>
        <div class="absolute bottom-20 left-12 w-24 h-0.5 border-t-2 border-dotted border-blue-300 opacity-60 hidden lg:block"></div>
      </div>
    </div>
  </div>

  <!-- Blog Content -->
  <div class="bg-white">
    <div class="max-w-4xl mx-auto px-6 py-12">
      <article class="prose prose-lg prose-blue max-w-none">
        <h1 class="blog-title fade-in">ENFERMERÍA UNA BUENA OPCIÓN PROFESIONAL</h1>

        <p class="blog-paragraph fade-in">
          El centro Universitario UNE, cuenta con una licenciatura en enfermería en donde se pueden encontrar excelentes docentes, una alta calidad académica e instalaciones de la más alta gama. Es una excelente opción para el estudio de la enfermería.
        </p>

        <p class="blog-paragraph fade-in">
          La enfermería, según la OMS está definida como el personal de la salud que desempeña una función importante de atención y prestación de servicios de salud a las personas y comunidades. La enfermería abarca un amplio abanico de acciones enfocadas en el cuidado autónomo y multidisciplinario brindado a personas sanas y enfermas de todos los entornos.
        </p>

        <p class="blog-paragraph fade-in">
          Si tomamos en cuenta la salud como el eje que sostiene la humanidad, estaríamos hablando de que el cuidado de ella se convierte en una prioridad mundial, es así que dentro de las múltiples profesiones del área de la salud enfermería se convierte en una profesión universal en donde el recurso principal de trabajo son los humanos, de los cuales según estadísticas de las Naciones Unidas hasta el año 2022 la población mundial alcanzó los 800 millones y se estima que aumentará casi 2000 millones de personas en los próximos 30 años.
        </p>

        <p class="blog-paragraph fade-in">
          Si bien la profesión de enfermería basado en lo anterior promete espacios laborales en crecimiento según el incremento de la población mundial, cabe puntualizar que es una profesión de vocación por el cuidado del otro.
        </p>

        <p class="blog-paragraph fade-in">
          En un estudio realizado por la Revista Cubana de Enfermería se presentó como resultado una teoría que sintetiza que el personal de enfermería prioriza de domingo a domingo el cumplimiento de su trabajo, aun cuando esto afecte su propio bienestar.
        </p>

        <p class="blog-paragraph fade-in">
          Enfermería es una profesión de valor, vocación, deseo de cuidar y servir, hoy en día el personal de enfermería es cada vez más reconocido y valorado, gracias a las grandes acciones en la primera línea de lucha durante la pandemia de COVID-19, en medio de la crisis sanitaria los y las enfermeras se enfrentaron a riesgos inminentes contra su salud, agresiones y agotamiento, sin embargo el resultado fue la difusión de una realidad ante la profesión, salarios y situaciones laborales deficientes así como la importancia de la profesión a nivel mundial.
        </p>

        <p class="blog-paragraph fade-in">
          La profesión de enfermería emerge en México en la década de los 80s, pero no es hasta el año 2002 cuando la enfermería pasa de ser un oficio y se convierte en una carrera reconocida por la dirección general de profesiones y hasta el año 2013 se establece la Norma Oficial Mexicana 019 como marco regulatorio de la profesión.
        </p>

        <p class="blog-paragraph fade-in">
          El instituto mexicano del seguro social comenzó una iniciativa en el año 2020 para el reconocimiento oficial de la categoría de licenciatura en enfermería, suceso histórico tras la pandemia de COVID-19, esfuerzo que dio resultados en enero de 2024, durante la entrega del reconocimiento a la calidad de enfermería otorgado cada año por parte del presidente y secretario del seguro social se dio a conocer que de las 134,698 trabajadoras y trabajadores de la categoría de enfermería 29,000 con título y cédula tendrían a su alcance la oportunidad de acceder a la nueva categoría, este suceso sin duda cambia la historia de la profesión en donde después de décadas de lucha el personal de enfermería tendrá una reestructuración de funciones dentro de las áreas de salud, permitiendo desarrollar actividades y toma de decisiones integrales con bases científicas para el cuidado de la salud.
        </p>

        <p class="blog-paragraph fade-in">
          Esta nueva estructura de la profesión suma al gremio reconocimiento y valor a cada enfermera a nivel mundial, entonces ¿Enfermería es una buena opción profesional?, sin duda lo es, brinda grandes e interminables oportunidades laborales, crecimiento científico, desarrollo de habilidades humanas y administrativas, evolución profesional y gran satisfacción emocional, pero no es para cualquiera, la enfermería es para aquellos con el valor de enfrentarse cada día al dolor humano, resistencia física y gran vocación de servir.
        </p>

        <section id="bibliografia" class="bibliografia-section fade-in">
          <h2 class="text-2xl font-bold text-green-600 mb-6 border-l-4 border-green-600 pl-4">Bibliografía</h2>
          <ol class="space-y-3 text-gray-700 leading-relaxed">
            <li>Diaz, Rendón (2019). El precio de la vocación en el personal de enfermería y su familia. <em>Revista cubana de enfermería</em>. https://revenfermeria.sld.cu/index.php/enf/article/view/1998/436</li>
            <li>Naciones Unidas. Desafíos globales población. https://www.un.org/es/global-issues/population</li>
            <li>Zarate, Rosa. (2021) Enfermería en tiempos de COVID-19: el aplauso no es suficiente. UNAM. https://amiif.org/wp-content/uploads/2021/03/08-entrevista-enfermeria-en-tiempos-de-covid-19.pdf</li>
          </ol>
        </section>
      </article>
    </div>
  </div>
</Layout>

<style>
/* Blog Content Styles */
.blog-title {
  font-size: 2.5rem;
  color: #001970;
  margin-bottom: 20px;
  max-width: 100%;
  text-align: left;
  font-weight: 700;
  line-height: 1.2;
}

.blog-subtitle {
  color: #001970;
  margin-top: 30px;
  margin-bottom: 16px;
  max-width: 100%;
  text-align: left;
  font-size: 1.6rem;
  font-weight: 700;
  border-left: 4px solid #2a7f62;
  padding-left: 12px;
  line-height: 1.3;
}

.blog-paragraph {
  font-size: 18px;
  line-height: 1.8;
  color: #333;
  max-width: 100%;
  margin-bottom: 16px;
  font-weight: 400;
  text-align: justify;
}

.bibliografia-section {
  font-size: 16px;
  line-height: 1.7;
  margin-top: 40px;
  margin-bottom: 40px;
}

/* Fade-in animations */
.fade-in {
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.6s ease-out forwards;
}

.fade-in:nth-child(1) { animation-delay: 0.1s; }
.fade-in:nth-child(2) { animation-delay: 0.2s; }
.fade-in:nth-child(3) { animation-delay: 0.3s; }
.fade-in:nth-child(4) { animation-delay: 0.4s; }
.fade-in:nth-child(5) { animation-delay: 0.5s; }
.fade-in:nth-child(6) { animation-delay: 0.6s; }
.fade-in:nth-child(7) { animation-delay: 0.7s; }
.fade-in:nth-child(8) { animation-delay: 0.8s; }
.fade-in:nth-child(9) { animation-delay: 0.9s; }
.fade-in:nth-child(10) { animation-delay: 1.0s; }
.fade-in:nth-child(11) { animation-delay: 1.1s; }
.fade-in:nth-child(12) { animation-delay: 1.2s; }
.fade-in:nth-child(13) { animation-delay: 1.3s; }
.fade-in:nth-child(14) { animation-delay: 1.4s; }
.fade-in:nth-child(15) { animation-delay: 1.5s; }

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  // Activar animaciones al hacer scroll
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animationPlayState = 'running';
      }
    });
  }, observerOptions);

  // Observar todos los elementos con fade-in
  document.querySelectorAll('.fade-in').forEach(el => {
    observer.observe(el);
  });
});
</script>