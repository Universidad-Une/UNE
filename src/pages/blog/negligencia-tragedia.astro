---
import Layout from "@/layouts/Layout.astro";
import Hero from "@assets/Imagenes/Heros/Blogs/Negligencia.webp"
---

<Layout>
  <!-- Hero Section -->
    <div class="relative overflow-hidden bg-gradient-to-br from-slate-50 to-blue-50">
        <div class="max-w-7xl  mx-auto px-2 py-12">
            <!-- Date and Tags -->
            <div class="text-center mb-8">
                <p class="text-red-500 font-semibold text-sm mb-4 fade-in">30 de julio de 2025</p>
                
               
               
            </div>

            <!-- Hero Image Section -->
            <div class="relative fade-in">
                <div class="bg-gradient-to-r from-blue-900 via-blue-800 to-indigo-900 rounded-2xl overflow-hidden shadow-2xl">
                    <div class="relative flex flex-col items-center p-8 md:p-12">
                        <!-- Top - Image Section -->
                        <div class="w-full mb-8">
                            <div class="relative">
                                <div class="bg-gray-800 rounded-lg p-2 shadow-xl transform -rotate-1 hover:rotate-0 transition-transform duration-300">
                                    <div class="bg-blue-900 rounded-md overflow-hidden">
                                        <img 
                                            src={Hero.src}
                                            alt="Industrial Safety Dashboard"
                                            class="hero-image"
                                        />
                                    </div>
                                </div>
                                
                                <!-- Floating Charts -->
                                <div class="absolute -right-4 -top-4 bg-white rounded-lg p-3 shadow-lg transform rotate-12 animate-bounce">
                                    <div class="w-16 h-12 bg-gradient-to-r from-blue-400 to-purple-500 rounded opacity-80"></div>
                                </div>
                                
                                <div class="absolute -left-4 -bottom-4 bg-white rounded-lg p-2 shadow-lg animate-pulse">
                                    <div class="w-12 h-8 bg-gradient-to-r from-green-400 to-blue-400 rounded opacity-80"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Bottom - Text Content -->
                        <div class="w-full text-white text-center">
                            <div class="flex items-center justify-center mb-4">
                                <div class="w-8 h-8 bg-yellow-400 rounded-full flex items-center justify-center mr-3">
                                    <svg class="w-4 h-4 text-gray-900" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <span class="text-yellow-400 font-semibold text-sm">PREVENCIÓN</span>
                            </div>
                            
                            <h2 class="text-3xl md:text-4xl font-bold mb-4 leading-tight">
                                CUANDO LA NEGLIGENCIA GANA,<br>
                                PREMIA LA TRAGEDIA
                            </h2>
                            
                            <p class="text-blue-100 text-lg mb-6 leading-relaxed">
                                Análisis comparativo de tragedias industriales evitables
                            </p>
                            
                            
                        </div>
                    </div>
                    
                </div>


                <!-- Decorative Elements -->
                <div class="absolute -top-6 -left-6 w-24 h-24 border-2 border-dashed border-blue-300 rounded-lg opacity-50"></div>
                <div class="absolute -bottom-4 -right-4 w-16 h-16 border-2 border-dashed border-blue-300 rounded-lg opacity-50"></div>
                
                <!-- Floating Icons -->
                <div class="absolute top-8 -right-4 hidden lg:block">
                    <div class="bg-orange-100 rounded-full p-3 shadow-lg hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>

                <div class="absolute bottom-8 -left-4 hidden lg:block">
                    <div class="bg-green-100 rounded-full p-3 shadow-lg hover:scale-110 transition-transform">
                        <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                </div>

                 <!-- Tags -->
                <div class="flex flex-wrap justify-center gap-4 mb-12 fade-in mt-12">
                    <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
                        Julio 2025
                    </span>
                    <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
                        Seguridad Industrial
                    </span>
                    <span class="bg-blue-800 text-white px-6 py-2 rounded-full text-sm font-medium">
                        Ingeniería
                    </span>
                </div>

                <!-- Dotted Connection Lines -->
                <div class="absolute top-8 right-8 w-32 h-0.5 border-t-2 border-dotted border-blue-300 opacity-60 hidden lg:block"></div>
                <div class="absolute bottom-8 left-8 w-24 h-0.5 border-t-2 border-dotted border-blue-300 opacity-60 hidden lg:block"></div>
            </div>
        </div>
    </div>

    <!-- Blog Content -->
    <div class="bg-white">
        <div class="max-w-4xl mx-auto px-6 py-12">
            <article class="prose prose-lg prose-blue max-w-none">
                <h1 class="blog-title fade-in">Cuando la negligencia gana, premia la tragedia</h1>
                
                <p class="text-sm text-gray-500 mb-8 fade-in">Autor: Ing. Rodrigo de Jesús Robledo Olguín</p>

                <h2 class="text-2xl font-bold text-blue-800 mb-4 fade-in">Beirut 2020 y Shandong 2025</h2>

                <p class="blog-paragraph fade-in">
                    Las explosiones industriales en Beirut (2020) y Shandong, China (2025), han evidenciado la importancia crítica de la seguridad industrial. Ambos incidentes, aunque separados por años y geografía, comparten factores comunes relacionados con la gestión de materiales peligrosos y la supervisión regulatoria.
                </p>

                <h3 class="text-xl font-bold text-gray-800 mb-4 fade-in">Explosión en Beirut (2020): Un Almacén Letal</h3>

                <p class="blog-paragraph fade-in">
                    El 4 de agosto de 2020, una explosión masiva sacudió el puerto de Beirut, Líbano, causando al menos 218 muertes y más de 7,000 heridos. La causa fue la detonación de 2,750 toneladas de nitrato de amonio almacenadas sin medidas de seguridad adecuadas desde 2013. Este compuesto, comúnmente utilizado como fertilizante, es altamente explosivo si se contamina o maneja incorrectamente.
                </p>

                <p class="blog-paragraph fade-in">
                    El incidente reveló fallas sistémicas en la gestión de riesgos y la supervisión gubernamental. A pesar de múltiples advertencias sobre el peligro del almacenamiento prolongado del nitrato de amonio, no se tomaron medidas preventivas. La explosión devastó gran parte de la ciudad y dejó a más de 300,000 personas sin hogar.
                </p>

                <h3 class="text-xl font-bold text-gray-800 mb-4 fade-in">Explosión en Shandong, China (2025): Repetición de Errores</h3>

                <p class="blog-paragraph fade-in">
                    El 27 de mayo de 2025, una explosión en la planta química Gaomi Youdao Chemical Co., en la provincia de Shandong, China, resultó en al menos cinco muertes, 19 heridos y seis desaparecidos. La planta, dedicada a la fabricación de pesticidas y productos químicos médicos, sufrió una detonación tan potente que rompió ventanas a más de tres kilómetros de distancia.
                </p>

                <p class="blog-paragraph fade-in">
                    Aunque la causa exacta aún está bajo investigación, este incidente resalta nuevamente los peligros asociados con la manipulación y almacenamiento de sustancias químicas peligrosas sin protocolos de seguridad rigurosos.
                </p>

                <h3 class="text-xl font-bold text-gray-800 mb-4 fade-in">Lecciones Aprendidas y Recomendaciones</h3>

                <ul class="space-y-2 mb-6 fade-in">
                    <li><strong>Almacenamiento Seguro de Materiales Peligrosos:</strong> mantener condiciones adecuadas para el almacenamiento, incluyendo controles de temperatura, ventilación y aislamiento.</li>
                    <li><strong>Supervisión y Regulación Efectiva:</strong> implementar y hacer cumplir regulaciones con inspecciones regulares.</li>
                    <li><strong>Capacitación del Personal:</strong> formación continua en prácticas de seguridad y respuesta a emergencias.</li>
                    <li><strong>Transparencia y Comunicación:</strong> establecer canales de comunicación claros para reportar riesgos.</li>
                </ul>

                <h3 class="text-xl font-bold text-gray-800 mb-4 fade-in">Conclusión</h3>

                <p class="blog-paragraph fade-in">
                    Las tragedias de Beirut y Shandong subrayan la necesidad urgente de reforzar las prácticas de seguridad industrial a nivel global. La prevención de futuros desastres requiere una combinación de regulaciones estrictas, supervisión efectiva y una cultura organizacional que priorice la seguridad sobre la productividad.
                </p>

                <p class="blog-paragraph fade-in">
                    Es por eso que en UNE formamos profesionales capaces de prevenir este tipo de tragedias. Contamos con docentes capacitados y programas académicos actualizados que integran prácticas de seguridad industrial, gestión de riesgos y normativas internacionales. Porque creemos que la prevención no es opcional, es una responsabilidad ética que puede salvar vidas. En UNE, preparamos a los futuros ingenieros para hacer la diferencia desde el primer día.
                </p>

                <section id="referencias" class="bibliografia-section fade-in">
                    <h2 class="text-2xl font-bold text-green-600 mb-6 border-l-4 border-green-600 pl-4">Referencias</h2>
                    <ol class="space-y-3 text-gray-700 leading-relaxed">
                        <li>BBC News Mundo. (2020, 5 de agosto). Líbano: qué se sabe de la causa de la devastadora explosión en Beirut que dejó al menos 137 muertos y miles de heridos. https://www.bbc.com/mundo/noticias-internacional-53659834</li>
                        <li>Infobae. (2025, 28 de mayo). Así quedó la planta química que estalló en China: cinco muertos, seis desaparecidos, 19 heridos y decenas de casas destrozadas. https://www.infobae.com/america/mundo/2025/05/28/</li>
                        <li>El País. (2025, 28 de abril). La justicia libanesa retoma la causa por la explosión en el puerto de Beirut tras dos años estancada. https://elpais.com/internacional/2025-04-28/</li>
                        <li>El Imparcial. (2025, 28 de mayo). Explosión en planta química de China deja al menos 5 muertos y 19 heridos en Shandong. https://www.elimparcial.com/mundo/2025/05/28/</li>
                        <li>DW Documental. (2021, 5 de agosto). Explosión en el puerto de Beirut. https://www.youtube.com/watch?v=L-A9ETPR9HM</li>
                    </ol>
                </section>
            </article>
        </div>
    </div>
</Layout>

<style>
/* Blog Content Styles */
.blog-title {
  font-size: 2.5rem;
  color: #001970;
  margin-bottom: 20px;
  max-width: 100%;
  text-align: left;
  font-weight: 700;
  line-height: 1.2;
}

.blog-subtitle {
  color: #001970;
  margin-top: 30px;
  margin-bottom: 16px;
  max-width: 100%;
  text-align: left;
  font-size: 1.6rem;
  font-weight: 700;
  border-left: 4px solid #2a7f62;
  padding-left: 12px;
  line-height: 1.3;
}

.blog-paragraph {
  font-size: 18px;
  line-height: 1.8;
  color: #333;
  max-width: 100%;
  margin-bottom: 16px;
  font-weight: 400;
  text-align: justify;
}

.bibliografia-section {
  font-size: 16px;
  line-height: 1.7;
  margin-top: 40px;
  margin-bottom: 40px;
}

/* Fade-in animations */
.fade-in {
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.6s ease-out forwards;
}

.fade-in:nth-child(1) { animation-delay: 0.1s; }
.fade-in:nth-child(2) { animation-delay: 0.2s; }
.fade-in:nth-child(3) { animation-delay: 0.3s; }
.fade-in:nth-child(4) { animation-delay: 0.4s; }
.fade-in:nth-child(5) { animation-delay: 0.5s; }
.fade-in:nth-child(6) { animation-delay: 0.6s; }
.fade-in:nth-child(7) { animation-delay: 0.7s; }
.fade-in:nth-child(8) { animation-delay: 0.8s; }
.fade-in:nth-child(9) { animation-delay: 0.9s; }
.fade-in:nth-child(10) { animation-delay: 1.0s; }
.fade-in:nth-child(11) { animation-delay: 1.1s; }
.fade-in:nth-child(12) { animation-delay: 1.2s; }
.fade-in:nth-child(13) { animation-delay: 1.3s; }
.fade-in:nth-child(14) { animation-delay: 1.4s; }
.fade-in:nth-child(15) { animation-delay: 1.5s; }

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  // Activar animaciones al hacer scroll
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animationPlayState = 'running';
      }
    });
  }, observerOptions);

  // Observar todos los elementos con fade-in
  document.querySelectorAll('.fade-in').forEach(el => {
    observer.observe(el);
  });
});
</script>