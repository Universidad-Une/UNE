  >
    <!-- Contenedor principal -->
    <div class="relative z-10 max-w-4xl w-full">
      <!-- Imagen de agradecimiento -->
      <div class="mb-8 text-center animate-slideDown">
        <div class="inline-block relative">
          <img
            src={gracias.src}
            alt="¡Gracias!"
            class="max-w-xs w-full h-auto rounded-3xl shadow-2xl transform hover:scale-105 transition-all duration-500"
          />
