---
import Layout from "@/layouts/Layout.astro";
import Fondo from "@assets/Imagenes/Heros/Contacto.png";
import Loggo from "@assets/Logos/UNE_blanco.webp";
import FormularioPrincipal from "@components/sections/contacto/FormularioEstudiantes.astro";
---

<Layout>
  <section class="h-[100dvh] lg:h-[84dvh] bg-gray-50 flex flex-col lg:flex-row">
    <!-- Lado izquierdo - Hero con imagen de fondo -->
    <div class="w-full lg:w-3/5 h-1/2 lg:h-full relative overflow-hidden">
      <div class="absolute inset-0 bg-black/40 z-10"></div>
      <img
        src={Fondo.src}
        alt="Apoyo a estudiantes UNE"
        class="absolute inset-0 w-full h-full object-cover"
      />

      <!-- Contenido del hero -->
      <div
        class="relative z-20 h-full flex flex-col justify-between p-8 text-white"
      >
        <!-- Logo y texto principal -->
        <div class="flex-1 flex flex-col justify-center ">
          <h1 class="text-4xl md:text-5xl font-bold text-center leading-tight">
            Estamos aquí para apoyarte en tu camino académico
          </h1>

          <img src={Loggo.src} alt="UNE Logo" class="w-72 h-auto mb-8 mx-auto" />
        </div>

        <!-- Información de contacto estudiantil -->
        <div class="space-y-4">
          <div class="flex items-center space-x-3">
            <div
              class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center"
            >
              <svg
                class="w-3 h-3 text-white"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
                ></path>
              </svg>
            </div>
            <span class="text-sm">338000 0832 - Servicios Estudiantiles</span>
          </div>

          <div class="flex items-center space-x-3">
            <div
              class="w-6 h-6 bg-blue-500 rounded-full flex items-center justify-center"
            >
              <svg
                class="w-3 h-3 text-white"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                ></path>
                <path
                  d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                ></path>
              </svg>
            </div>
            <span class="text-sm">apoyo.estudiantes@universidad-une.com</span>
          </div>

          <div class="flex items-center space-x-3">
            <div
              class="w-6 h-6 bg-purple-500 rounded-full flex items-center justify-center"
            >
              <svg
                class="w-3 h-3 text-white"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                  clip-rule="evenodd"
                ></path>
              </svg>
            </div>
            <span class="text-sm">Asesoría Académica - Ext. 2105</span>
          </div>

          <div class="flex items-center space-x-3">
            <div
              class="w-6 h-6 bg-yellow-500 rounded-full flex items-center justify-center"
            >
              <svg
                class="w-3 h-3 text-white"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"
                ></path>
              </svg>
            </div>
            <span class="text-sm">Bienestar Estudiantil - Ext. 2108</span>
          </div>
        </div>

        <!-- Texto descriptivo -->
        <div class="mt-8">
          <p class="text-sm leading-relaxed opacity-90">
            Nuestro equipo de apoyo estudiantil está disponible para ayudarte con asesoría académica, 
            trámites escolares, bienestar emocional y todo lo que necesites para tu éxito universitario
          </p>
        </div>
      </div>
    </div>

    <!-- Lado derecho - Formulario de contacto -->
    <div
      class="w-full lg:w-2/5 h-1/2 lg:h-full bg-white flex items-center justify-center p-4 lg:p-6"
    >
      <div
        class="w-full max-w-md h-full lg:h-auto flex flex-col justify-center"
      >
        <h2
          class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4 lg:mb-6 text-center"
        >
          Solicita Apoyo
        </h2>
        <p class="text-gray-600 text-center mb-6 text-sm">
          Completa el formulario y nos pondremos en contacto contigo
        </p>

        <FormularioPrincipal />
      </div>
    </div>
  </section>

  <!-- Sección de servicios de apoyo -->
  <section class="py-16 px-4 bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
          Servicios de Apoyo Estudiantil
        </h2>
        <p class="text-red-500 text-lg font-medium">
          Tu éxito académico es nuestra prioridad
        </p>
      </div>

      <div class="grid lg:grid-cols-3 gap-8 mb-12">
        <!-- Asesoría Académica -->
        <div class="text-center p-6 rounded-lg bg-gray-50 hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.75 2.524z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Asesoría Académica</h3>
          <p class="text-gray-600 text-sm">
            Te ayudamos con la planificación de tu carrera, selección de materias y estrategias de estudio
          </p>
        </div>

        <!-- Bienestar Estudiantil -->
        <div class="text-center p-6 rounded-lg bg-gray-50 hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Bienestar Estudiantil</h3>
          <p class="text-gray-600 text-sm">
            Apoyo psicológico, programas de salud mental y actividades para tu desarrollo integral
          </p>
        </div>

        <!-- Trámites Escolares -->
        <div class="text-center p-6 rounded-lg bg-gray-50 hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-purple-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Trámites Escolares</h3>
          <p class="text-gray-600 text-sm">
            Gestión de documentos, certificados, constancias y todos tus trámites administrativos
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Sección de horarios y ubicaciones -->
  <section class="py-16 px-4 bg-gray-50">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Contenido de texto -->
        <div class="space-y-6">
          <div>
            <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
              Horarios de Atención
            </h2>
            <p class="text-red-500 text-lg font-medium mb-6">
              Siempre disponibles para ti
            </p>
          </div>

          <div class="space-y-4">
            <div class="bg-white p-4 rounded-lg shadow-sm">
              <h4 class="font-semibold text-gray-900 mb-2">Atención Presencial</h4>
              <p class="text-gray-600 text-sm">Lunes a Viernes: 8:00 AM - 6:00 PM</p>
              <p class="text-gray-600 text-sm">Sábados: 9:00 AM - 2:00 PM</p>
            </div>
            
            <div class="bg-white p-4 rounded-lg shadow-sm">
              <h4 class="font-semibold text-gray-900 mb-2">Atención Telefónica</h4>
              <p class="text-gray-600 text-sm">Lunes a Viernes: 7:00 AM - 8:00 PM</p>
              <p class="text-gray-600 text-sm">Emergencias: 24/7</p>
            </div>

            <div class="bg-white p-4 rounded-lg shadow-sm">
              <h4 class="font-semibold text-gray-900 mb-2">Chat en Línea</h4>
              <p class="text-gray-600 text-sm">Disponible las 24 horas</p>
              <p class="text-gray-600 text-sm">Respuesta inmediata</p>
            </div>
          </div>

          
        </div>

        <!-- Mapa -->
        <div class="relative">
          <div class="rounded-lg overflow-hidden shadow-lg">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d112978.53389757457!2d-103.40789932575186!3d20.682262775985265!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1sune!5e0!3m2!1ses!2smx!4v1753213417993!5m2!1ses!2smx"
              width="100%"
              height="450"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Ubicaciones de servicios estudiantiles"
            >
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    /* Estilos adicionales si necesitas personalización específica */
    @media (max-width: 768px) {
      iframe {
        height: 300px;
      }
    }
  </style>
</Layout>