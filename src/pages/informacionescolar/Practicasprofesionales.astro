---
import Layout from "@/layouts/Layout.astro";
import InformativeCard from "@components/sections/detallesOferta/card.astro";
import ImagenCard from "@/assets/Imagenes/CardsNiveles/Nivel.webp";
import LogoCard from "@/assets/Logos/UNE_30.webp";
import LogoUDG from "@/assets/Logos/UDG.webp";
import LogoSicyt from "@/assets/Logos/Sicyt-oscuro.webp";
import LogoUNE from "@/assets/Logos/UNE_blanco.webp";
import {
    Users,
    Calendar,
    MapPin,
    GraduationCap,
    Award,
    Clock,
    FileText,
    Phone,
    Mail,
    MapPinIcon,
    BookOpen,
    Trophy,
    UserCheck,
} from "@lucide/astro";
---

<Layout>
    <!-- Hero Section -->
    <section
        class="titulacion-bg relative min-h-[65vh] overflow-hidden bg-cover bg-center bg-no-repeat flex items-center justify-center"
    >
        <div
            class="relative z-10 container mx-auto px-4 h-full min-h-[85vh] md:min-h-[65vh] flex flex-col justify-center"
        >
            <div class="text-white max-w-2xl">
                <h1 class="text-4xl md:text-6xl font-bold mb-4 leading-tight">
                    TITULACIÓN
                </h1>
                <p class="text-lg md:text-xl mb-8 leading-relaxed font-light">
                    Procedimiento académico para demostrar que adquiriste los
                    conocimientos y habilidades profesionales necesarios para tu
                    ejercicio profesional.
                </p>
                <button
                    class="bg-rojo-une hover:bg-red-700 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors duration-300 transform hover:scale-105"
                    onclick="window.location.href='#informacion-titulacion'"
                 aria-label="Ver Modalidades y Requisitos" title="Ver Modalidades y Requisitos">
                    Ver Modalidades y Requisitos
                </button>
            </div>
        </div>
    </section>

    <InformativeCard
        logoSrc={LogoCard.src}
        studentImageSrc={ImagenCard.src}
        title="Tu Proceso de Titulación con Nosotros"
        description="La titulación es el paso final para acreditarte como profesional. Te acompañamos en todo el proceso con modalidades adaptadas a ti, guiándote desde la elección hasta la obtención de tu título, cumpliendo con los requisitos de tu universidad."
        additionalText=""
        features={[
            { icon: "BookOpen", label: "Múltiples modalidades" },
            { icon: "Calendar", label: "Convocatorias semestrales" },
            { icon: "Trophy", label: "Desempeño sobresaliente" },
            { icon: "GraduationCap", label: "Título profesional" },
            { icon: "UserCheck", label: "Asesoría especializada" },
        ]}
    />

    <!-- Información por Tipo de Alumno -->
    <section id="informacion-titulacion" class="py-16 bg-gray-50">
