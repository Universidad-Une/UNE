---
import Layout from "@/layouts/Layout.astro";
import { Search } from "@lucide/astro";
import AccesosBibliotecas from "@/components/sections/Escolares/Accesos_bibliotecas.astro";
---

<Layout>
    <main class="min-h-screen">
        <!-- Hero Section -->
        <section
            class="bibliotecas-bg relative bg-cover bg-center min-h-[70vh]"
        >
            <!-- Hero Content -->
            <div
                class="relative z-10 container mx-auto px-4 h-full min-h-[65vh] flex flex-col md:flex-row items-center justify-center md:justify-end"
            >
                <div
                    class="w-full max-w-7xl flex flex-col md:flex-row items-center justify-between"
                >
                    <!-- Left side - FAQ Title -->
                    <div
                        class="flex items-center space-x-4 mb-6 md:mb-0 md:space-x-8 text-white"
                    >
                        <div
                            class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center"
                        >
                            <Search class="w-8 h-8 text-white" />
                        </div>
                        <h1
                            class="text-4xl md:text-6xl font-bold tracking-wider"
                        >
                            Bibliotecas UNE
                        </h1>
                    </div>

                    <!-- Right side - Welcome message -->
                    <div
                        class="bg-white rounded-lg p-6 max-w-sm shadow-lg text-center md:text-left"
                    >
                        <h2 class="text-xl font-bold text-gray-800 mb-3">
                            Bibliotecas Digitales
                        </h2>
                        <p class="text-gray-600 text-sm leading-relaxed">
                            Descubre todo el material que tiene UNE para ti,
                            accede a recursos digitales para complementar tus
                            conocimeintos
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <AccesosBibliotecas />

        <section class="py-16 bg-gray-50">
            <div class="container mx-auto  max-w-7xl">
                <!-- Primera sección: Acceso completo -->
                <div class="grid md:grid-cols-2 gap-12 items-center mb-20">
                    <!-- Contenido de texto -->
                    <div class="space-y-6">
                        <h2
                            class="text-3xl md:text-4xl font-bold text-gray-800 leading-tight"
                        >
                            Acceso completo a recursos especializados
                        </h2>
                        <p class="text-gray-600 leading-relaxed text-lg">
                            UNE pone a tu alcance el conocimiento de manera
                            fácil y académicamente. Ofrecemos acceso a las
                            mejores plataformas digitales con contenido
                            especializado desde bases de datos jurídicas hasta
                            libros técnicos de ingeniería, recursos interactivos
                            y material de investigación actualizado. Todo
                            disponible 24/7 para que estudies desde donde estés,
                            cuando lo necesites.
                        </p>
                    </div>

                    <!-- Imagen -->
                    <div class="relative">
                        <img
                            src="/src/assets/Imagenes/Bibliotecas/Estadio.jpg"
                            alt="Biblioteca digital con libros y tecnología"
                            class="w-96 h-auto rounded-lg shadow-lg"
                        />
                    </div>
                </div>

                <!-- Segunda sección: Disponible cuando lo necesites -->
                <div class="text-center mb-16">
                    <h2
                        class="text-3xl md:text-4xl font-bold text-gray-800 mb-16"
                    >
                        Disponible cuando lo necesites
                    </h2>

                    <div class="grid md:grid-cols-2 gap-12 items-center">
                        <!-- Ilustración de libros -->
                        <div class="flex justify-center">
                            <div class="relative">
                                <!-- Stack de libros ilustrado con CSS -->
                                <div class="w-64 h-48 relative">
                                    <!-- Base circular verde -->
                                    <div
                                        class="absolute bottom-0 w-full h-32 bg-teal-200 rounded-full opacity-80"
                                    >
                                    </div>

                                    <!-- Libros apilados -->
                                    <div
                                        class="absolute bottom-8 left-8 w-24 h-6 bg-pink-500 rounded-sm transform -rotate-2"
                                    >
                                    </div>
                                    <div
                                        class="absolute bottom-12 left-12 w-24 h-6 bg-blue-500 rounded-sm transform rotate-1"
                                    >
                                    </div>
                                    <div
                                        class="absolute bottom-16 left-8 w-24 h-6 bg-green-500 rounded-sm transform -rotate-1"
                                    >
                                    </div>
                                    <div
                                        class="absolute bottom-20 left-14 w-24 h-6 bg-yellow-500 rounded-sm transform rotate-2"
                                    >
                                    </div>
                                    <div
                                        class="absolute bottom-24 left-10 w-24 h-6 bg-purple-500 rounded-sm transform -rotate-1"
                                    >
                                    </div>
                                    <div
                                        class="absolute bottom-28 left-16 w-24 h-6 bg-red-500 rounded-sm transform rotate-1"
                                    >
                                    </div>
                                    <div
                                        class="absolute bottom-32 left-12 w-24 h-6 bg-indigo-500 rounded-sm transform -rotate-2"
                                    >
                                    </div>
                                    <div
                                        class="absolute bottom-36 left-14 w-24 h-6 bg-pink-400 rounded-sm transform rotate-1"
                                    >
                                    </div>

                                    <!-- Laptop abierto -->
                                    <div
                                        class="absolute bottom-4 right-4 w-16 h-12 bg-gray-300 rounded-sm"
                                    >
                                        <div
                                            class="w-full h-8 bg-gray-800 rounded-t-sm"
                                        >
                                        </div>
                                        <div
                                            class="w-full h-4 bg-gray-200 rounded-b-sm"
                                        >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Lista de servicios -->
                        <div class="space-y-6 text-left">
                            <div class="flex items-center space-x-4">
                                <div
                                    class="w-6 h-6 border-2 border-green-500 rounded-full flex items-center justify-center"
                                >
                                    <div
                                        class="w-3 h-3 bg-green-500 rounded-full"
                                    >
                                    </div>
                                </div>
                                <span class="text-lg text-gray-700"
                                    >Acceso Digital</span
                                >
                            </div>

                            <div class="flex items-center space-x-4">
                                <div
                                    class="w-6 h-6 border-2 border-green-500 rounded-full flex items-center justify-center"
                                >
                                    <div
                                        class="w-3 h-3 bg-green-500 rounded-full"
                                    >
                                    </div>
                                </div>
                                <span class="text-lg text-gray-700"
                                    >Biblioteca Física</span
                                >
                            </div>

                            <div class="flex items-center space-x-4">
                                <div
                                    class="w-6 h-6 border-2 border-green-500 rounded-full flex items-center justify-center"
                                >
                                    <div
                                        class="w-3 h-3 bg-green-500 rounded-full"
                                    >
                                    </div>
                                </div>
                                <span class="text-lg text-gray-700"
                                    >Soporte Técnico</span
                                >
                            </div>

                            <div class="flex items-center space-x-4">
                                <div
                                    class="w-6 h-6 border-2 border-green-500 rounded-full flex items-center justify-center"
                                >
                                    <div
                                        class="w-3 h-3 bg-green-500 rounded-full"
                                    >
                                    </div>
                                </div>
                                <span class="text-lg text-gray-700"
                                    >Talleres de Investigación</span
                                >
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tercera sección: Ayuda para acceder -->
                <div
                    class=" rounded-lg h-72 p-8 md:p-12 text-center relative overflow-hidden"
                >
                    <!-- Fondo con imagen -->
                    <div class="absolute inset-0 ">
                        <img
                            src="/Images/Fondo-Blog.png"
                            alt="Estudiantes en biblioteca"
                            class="w-full h-full object-cover"
                        />
                        
                    </div>

                    <!-- Contenido -->
                    <div class="relative z-10">
                        <h2
                            class="text-2xl md:text-3xl font-bold text-white mb-8"
                        >
                            ¿Necesitas ayuda para acceder a tus recursos?
                        </h2>

                        <div
                            class="flex flex-col sm:flex-row gap-4 justify-center"
                        >
                            <a
                                href="/contacto/atencion-estudiantes"
                                class="bg-gray-200 hover:bg-white text-gray-800 px-8 py-3 rounded-lg font-semibold transition-colors duration-300"
                            >
                                Solicitar Acceso
                            </a>
                           
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .bibliotecas-bg {
        background-image: url("/src/assets/Imagenes/Heros/Bibliotecas.jpg");
    }

    @media (max-width: 767px) {
        .bibliotecas-bg {
            background-image: url("/src/assets/Imagenes/Heros/Bibliotecas_mobile.jpg");
        }
    }
</style>
