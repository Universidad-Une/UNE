    display: flex;
    align-items: stretch;
  }

  .splide__slide > div {
    width: 100%;
  }

  /* Personalizar las flechas de navegación */
  .splide__arrow {
    width: 3rem;
    height: 3rem;
  }

  .splide__arrow svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  /* Personalizar los puntos de paginación */

  /* Hover effects en las cards */
  .splide__slide > div:hover {
    transform: translateY(-4px);
    transition: transform 0.3s ease;
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style>
