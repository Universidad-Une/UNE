<Layout>
  <main class="min-h-screen">
    <!-- Hero Section -->

    <section
      class="relative min-h-[85vh] md:min-h-[65vh] bg-cover bg-center bg-no-repeat"
    >
      {/* Desktop Background */}
      <div
        class="absolute inset-0 hidden md:block bg-cover bg-center bg-no-repeat"
        style={{ backgroundImage: `url(${Hero.src})` }}
      >
      </div>

      {/* Mobile Background */}
      <div
        class="absolute inset-0 block md:hidden bg-cover bg-center bg-no-repeat"
        style={{ backgroundImage: `url(${Hero_mobile.src})` }}
      >
      </div>

      {/* Hero Content */}
      <div
        class="relative z-10 container mx-auto px-4 h-full min-h-[85vh] md:min-h-[65vh] flex flex-col justify-center"
      >
        <div class="text-center text-white max-w-4xl mx-auto">
          {/* Main Title */}
          <h1 class="text-4xl md:text-7xl font-bold tracking-wider mb-4">
            Bachillerato Intensivo Semiescolarizado
          </h1>
          <h2 class="text-2xl md:text-5xl font-bold tracking-wider mb-8">
            UNE
          </h2>

          {/* Description */}
          <p
            class="text-lg md:text-xl leading-relaxed mb-16 max-w-3xl mx-auto font-light"
          >
            Transforma tu futuro con nuestro programa acelerado de bachillerato.
            En UNE combinamos la flexibilidad del aprendizaje semiescolarizado
            con la excelencia académica, preparándote para el éxito
            universitario y profesional en tiempo récord.
          </p>
        </div>
      </div>
    </section>

    <!-- Floating Card - ahora está fuera de la sección hero -->
    <div class="relative -top-16 z-20 px-4">
      <div class="bg-azul-une rounded-2xl px-8 shadow-2xl max-w-4xl mx-auto">
        <div
          class="flex flex-col sm:flex-row items-center justify-center gap-6"
        >
          <!-- CTA Buttons -->
          <div
            class="flex flex-col sm:flex-row gap-4 w-full justify-center text-white"
          >
            <!-- Agenda una Visita -->
            <a
              href="/contacto/solicitarvisita"
              class="hover:border-b hover:border-b-cyan-50 font-bold py-6 px-6 text-base transition-colors duration-300 shadow-lg flex flex-col items-center justify-center gap-2 whitespace-nowrap"
            >
              AGENDA UNA VISITA
              <Calendar size={20} />
            </a>

            <!-- Iniciar Inscripción -->
            <a
              href="/contacto/formulario-inscripcion"
              class="hover:border-b hover:border-b-cyan-50 font-bold py-3 px-6 text-base transition-colors duration-300 shadow-lg flex flex-col items-center justify-center gap-2 whitespace-nowrap"
            >
              INICIAR INSCRIPCIÓN
              <UserPlus size={20} />
            </a>

            <!-- Contactar -->
            <a
              href="/contacto/solicitarinformacion"
              class="hover:border-b hover:border-b-cyan-50 font-bold py-3 px-6 text-base transition-colors duration-300 shadow-lg flex flex-col items-center justify-center gap-2 whitespace-nowrap"
            >
              CONTACTAR
              <Phone size={20} />
            </a>
          </div>
        </div>
      </div>
    </div>

    <InformativeCard
      logoSrc={LogoCard.src}
      studentImageSrc={ImagenCard.src}
      title="Bachillerato Semiescolarizado"
      description="Obtén tu certificado de preparatoria con validez oficial en un formato flexible que combina sesiones presenciales y estudio en casa."
      additionalText="Programa reconocido por la SEP, ideal para adultos y jóvenes que necesitan equilibrar estudios con otras responsabilidades."
      features={[
        { icon: "CalendarDays", label: "Sesiones presenciales" },
        { icon: "BookOpen", label: "Estudio guiado" },
        { icon: "School", label: "Validez oficial" },
        { icon: "Clock", label: "Horarios flexibles" },
        { icon: "BookmarkCheck", label: "Preparación universitaria" },
      ]}
    />

    <Planteles
      titulo="Encuentra tu campus más cercano"
      planteles={planteles}
      ciudades={ciudades}
      mostrarMasCercano={true}
    />

    <Costos
      seguroEscolar={costosData.seguroEscolar}
      uniformeEscolar={costosData.uniformeEscolar}
      uniformeDiario={costosData.uniformeDiario}
      planteles={crearPlantelesUniformes({
        planteles: nombresPlanteles,
        costoNormal: 609,
        costoSabatina: 772,
      })}
    />
    <Requisitos nivel="Bachillerato" requisitos={requisitosInfo} />

    <PlanEstudios titulo="Propuesta Educativa" semestres={semestresDatos} />

    <Perfiles
      perfilIngreso="El estudiante que ingresa al bachillerato semiescolarizado SYCIT debe contar con certificado de secundaria, autonomía para organizar su tiempo y actividades, disposición para el autoaprendizaje y compromiso para asistir a clases presenciales y realizar actividades a distancia. Se espera que tenga habilidades básicas de lectura, escritura, razonamiento lógico y uso elemental de tecnologías."
      perfilEgreso="El egresado del bachillerato semiescolarizado SYCIT es un joven responsable, con capacidad de autoaprendizaje, pensamiento crítico y habilidades para resolver problemas en contextos académicos y sociales. Está preparado para continuar estudios superiores o integrarse al campo laboral con ética, sentido de compromiso social, habilidades tecnológicas y capacidad para trabajar colaborativamente."
    />

    <FAQComponent
      faqs={faqs}
      title="Preguntas frecuentes"
      subtitle="Encuentra respuestas a las dudas más comunes"
    />

    <CTAinscripcion />
  </main>
</Layout>
