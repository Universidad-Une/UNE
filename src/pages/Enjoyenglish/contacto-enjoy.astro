---
import Layout from "@/layouts/Layout.astro";
import Enjoy from "@/assets/Logos/Enjoy_english_blanco.webp";
---

<Layout title="Contacto - Enjoy English Centro de Idiomas UNE">
  <main id="principal" class="min-h-screen">
    <div class="container mx-auto px-4 py-12 md:py-20">
      <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-4"
          >
            ¡Comienza tu viaje hoy!
          </h1>
          <p class="text-lg md:text-xl text-white/80">
            Déjanos tus datos y un asesor se pondrá en contacto contigo
          </p>
        </div>

        <!-- Formulario -->
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 md:p-10">
          <form id="contactForm" class="space-y-6">
            <!-- Nombre Completo -->
            <div>
              <label
                for="nombre"
                class="block text-white font-bold mb-2 text-sm md:text-base"
              >
                Nombre completo <span class="text-[#e2231a]">*</span>
              </label>
              <input
                type="text"
                id="nombre"
                name="nombre"
                required
                placeholder="Escribe tu nombre completo"
                class="w-full px-4 py-3 rounded-lg bg-white/90 text-[#001970] placeholder-gray-500 focus:outline-none font-medium"
              />
            </div>

            <!-- Email -->
            <div>
              <label
                for="correo"
                class="block text-white font-bold mb-2 text-sm md:text-base"
              >
                Correo electrónico <span class="text-[#e2231a]">*</span>
              </label>
              <input
                type="email"
                id="correo"
                name="correo"
                required
                placeholder="ejemplo@correo.com"
                class="w-full px-4 py-3 rounded-lg bg-white/90 text-[#001970] placeholder-gray-500 focus:outline-none font-medium"
              />
            </div>

            <!-- Teléfono -->
            <div>
              <label
                for="telefono"
                class="block text-white font-bold mb-2 text-sm md:text-base"
              >
                Teléfono <span class="text-[#e2231a]">*</span>
              </label>
              <input
                type="tel"
                id="telefono"
                name="telefono"
                required
                placeholder="10 dígitos"
                pattern="[0-9]{10}"
                maxlength="10"
                class="w-full px-4 py-3 rounded-lg bg-white/90 text-[#001970] placeholder-gray-500 focus:outline-none font-medium"
              />
            </div>

            <!-- Mensaje de error/éxito -->
            <div id="formMessage" class="hidden"></div>

            <!-- Botón de envío -->
            <button
              type="submit"
              id="submitButton"
              class="w-full bg-[#e2231a] hover:bg-[#c41f17] text-white font-bold py-4 px-8 rounded-lg text-lg transition-all duration-300 flex items-center justify-center gap-3"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              Enviar información
            </button>

            <p class="text-white/70 text-sm text-center">
              Al enviar este formulario aceptas que un asesor de Enjoy English
              se ponga en contacto contigo
            </p>
          </form>
        </div>

        <!-- Información de contacto -->
        <div class="mt-12 grid md:grid-cols-2 gap-6">
          <!-- WhatsApp -->
          <a
            href="https://wa.me/523314950908"
            target="_blank"
            class="bg-white/5 backdrop-blur-sm p-6 rounded-xl border-2 border-[#fcc420] hover:border-[#e2231a] transition-all flex items-start gap-4"
          >
            <div
              class="w-12 h-12 bg-[#25D366] rounded-full flex items-center justify-center flex-shrink-0"
            >
              <svg
                class="w-6 h-6 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.885-9.885 9.885m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-white font-bold text-lg mb-1">WhatsApp</h3>
              <p class="text-white/80 text-sm mb-2">
                Chatea con nosotros directamente
              </p>
              <p class="text-[#fcc420] font-bold">331 495 0908</p>
            </div>
          </a>

          <!-- Horario -->
          <div
            class="bg-white/5 backdrop-blur-sm p-6 rounded-xl border-2 border-[#fcc420]"
          >
            <div class="flex items-start gap-4">
              <div
                class="w-12 h-12 bg-[#fcc420] rounded-full flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-6 h-6 text-[#001970]"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.2 3.2.8-1.3-4.5-2.7V7z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="text-white font-bold text-lg mb-1">
                  Horario de atención
                </h3>
                <p class="text-white/80 text-sm mb-2">Lunes a viernes</p>
                <p class="text-[#fcc420] font-bold">9:00 AM - 6:00 PM</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Banner informativo -->
        <div
          class="mt-12 bg-gradient-to-r from-[#e2231a] to-[#e2231a]/70 p-6 md:p-8 rounded-2xl text-center"
        >
          <h3 class="text-white font-black text-2xl md:text-3xl mb-2">
            ¡Aprovecha nuestra oferta!
          </h3>
          <p class="text-white/90 text-lg">
            Módulos desde <span class="font-black text-[#fcc420]">$880 MXN</span
            >
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Fondo principal con imagen */
  #principal {
    background-image: url("/src/assets/Imagenes/Backgrouds/Enjoy.png");
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    font-family: Averta, sans-serif;
  }

  /* Smooth scroll */
  html {
    scroll-behavior: smooth;
  }

  /* Focus visible para accesibilidad */
  input:focus-visible,
  button:focus-visible {
    outline: 2px solid #fcc420;
    outline-offset: 2px;
  }

  /* Animación del botón */
  #submitButton:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  /* Mensajes de error/éxito */
  .error-message {
    background-color: rgba(226, 35, 26, 0.2);
    border: 2px solid #e2231a;
    color: white;
    padding: 1rem;
    border-radius: 0.5rem;
    text-align: center;
  }

  .success-message {
    background-color: rgba(76, 175, 80, 0.2);
    border: 2px solid #4caf50;
    color: white;
    padding: 1rem;
    border-radius: 0.5rem;
    text-align: center;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("contactForm") as HTMLFormElement;
    const submitButton = document.getElementById(
      "submitButton"
    ) as HTMLButtonElement;
    const formMessage = document.getElementById("formMessage");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      // Deshabilitar botón y cambiar texto
      const originalText = submitButton.textContent || "";
      submitButton.disabled = true;
      submitButton.innerHTML = `
        <svg class="animate-spin h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span>Enviando...</span>
      `;

      // Ocultar mensaje anterior
      if (formMessage) {
        formMessage.classList.add("hidden");
      }

      // Obtener datos del formulario
      const formData = new FormData(form);
      const nombreCompleto = formData.get("nombre")?.toString() || "";

      // Separar nombre y apellidos
      const partesNombre = nombreCompleto.trim().split(" ");
      let nombre = "";
      let apellido_p = "";
      let apellido_m = "";

      if (partesNombre.length === 1) {
        nombre = partesNombre[0];
      } else if (partesNombre.length === 2) {
        nombre = partesNombre[0];
        apellido_p = partesNombre[1];
      } else if (partesNombre.length >= 3) {
        // Primer palabra = nombre
        // Segunda palabra = apellido paterno
        // Resto = apellido materno
        nombre = partesNombre[0];
        apellido_p = partesNombre[1];
        apellido_m = partesNombre.slice(2).join(" ");
      }

      // Preparar datos para la API
      const data = {
        nombre: nombre,
        apellido_p: apellido_p,
        apellido_m: apellido_m,
        correo: formData.get("correo") || "",
        telefono: formData.get("telefono") || "",
        medio: "Página web",
        modalidad: "Escolarizada",
        nivel_educativo: "IDIOMAS",
        plantel_interes: "IDIOMAS",
        programa_interes: "IDIOMAS",
      };

      try {
        const apiUrl = "https://intranet.universidad-une.com/api/createleads";

        const response = await fetch(apiUrl, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        });

        console.log("Status:", response.status);
        const responseText = await response.text();
        console.log("Respuesta:", responseText);

        if (response.ok) {
          console.log("Enviado correctamente");
          window.location.href = "/contacto/gracias-enjoy";
        } else {
          throw new Error(`Error ${response.status}`);
        }
      } catch (error) {
        console.error("Error:", error);
        // En caso de error, también redirigir
        window.location.href = "/contacto/gracias-enjoy?error=true";
      } finally {
        // Restaurar botón
        submitButton.disabled = false;
        submitButton.innerHTML = `
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <span>Enviar Información</span>
        `;
      }
    });

    // Validación del teléfono en tiempo real
    const telefonoInput = document.getElementById(
      "telefono"
    ) as HTMLInputElement;
    if (telefonoInput) {
      telefonoInput.addEventListener("input", (e) => {
        const target = e.target as HTMLInputElement;
        target.value = target.value.replace(/\D/g, "").slice(0, 10);
      });
    }
  });
</script>
