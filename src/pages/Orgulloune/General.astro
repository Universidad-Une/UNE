---
import Layout from "@/layouts/Layout.astro";

import GaleriaGraduados from "@/components/sections/graduados/GaleriaGraduados.astro";
import EstadisticasGraduados from "@/components/sections/graduados/EstadisticasaGraduados.astro";
import Showroom from "@/components/sections/graduados/showroom.astro";
import Cover from "@/assets/Imagenes/Middles/Sillas.webp";

import Accesos from "@/components/sections/graduados/AccesosGraduados.astro";

---

<Layout>
  <!-- Hero Section -->
  <section
    class="graduados-bg relative min-h-[65vh] overflow-hidden bg-cover bg-center bg-no-repeat flex items-center justify-center"
  >
    <div
      class="relative z-10 container mx-auto px-4 h-full min-h-[85vh] md:min-h-[65vh] flex flex-col justify-center"
    >
      <div class="text-white max-w-2xl">
        <h1 class="text-4xl md:text-6xl font-bold mb-4 leading-tight">
          Graduados UNE: Líderes que transforman industrias
        </h1>
        <p class="text-lg md:text-xl mb-8 leading-relaxed font-light">
          Más de 30,000 profesionales egresados de UNE están construyendo el
          futuro en las empresas más importantes de México y el mundo. Tu éxito
          profesional es nuestra misión cumplida.
        </p>
      </div>
    </div>
  </section>

  <section class="bg-white mt-12 ">
    <EstadisticasGraduados/>

   <!--  <Showroom/> -->
    <GaleriaGraduados/>

    <Accesos/>

    
    <!-- Sección de Notificaciones -->
    <section
        class="py-16 bg-cover bg-center bg-no-repeat relative"
        style={`background-image: url(${Cover.src})`}
    >
        <div class="container mx-auto  relative z-10">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center text-white">
                <div>
                    <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
                        ¿Quieres ser notificado de la próxima convocatoria?
                    </h2>
                </div>
                <div class="space-y-4">
                    <!-- En mobile: inputs en columna uno debajo del otro -->
                    <div class="flex flex-col gap-4">
                        <input
                            type="text"
                            placeholder="Nombre"
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500"
                        />
                        <input
                            type="email"
                            placeholder="Correo"
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500"
                        />
                        <input
                            type="text"
                            placeholder="Egresado de la carrera:"
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500"
                        />
                        <input
                            type="text"
                            placeholder="Plantel"
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500"
                        />
                        <input
                            type="tel"
                            placeholder="Celular"
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500"
                        />
                    </div>
                    <button
                        class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition-colors"
                    >
                        Registrar Interés
                    </button>
                </div>
            </div>
        </div>
    </section>
  </section>
</Layout>

<style>
  .graduados-bg {
    background-image: url("/src/assets/Imagenes/Heros/Graduados.webp");
  }

  @media (max-width: 767px) {
    .graduados-bg {
      background-image: url("/src/assets/Imagenes/Heros/Graduados_mobile.webp");
    }
  }
</style>
