---
import Layout from "@/layouts/Layout.astro";

import Winner from "@/assets/Imagenes/VTU/winner.webp";
import Ilustration from "@/assets/Imagenes/VTU/Ilustraciones/General.webp";
import VTULogo from "@/assets/Logos/VTU.webp";

import Galeria from "@/components/sections/vtu/Galeria.astro";

// Informaci√≥n del deporte
const deporteInfo = {
  nombre: "Box",
  emoji: "‚öΩ",
  categoria: "Deportiva - Box",
  horarios: [
    { dia: "Lunes", hora: "14:00 - 16:00" },
    { dia: "Mi√©rcoles", hora: "14:00 - 16:00" }
  ],
  descripcion: "√önete al equipo de Box de UNE y vive la pasi√≥n del deporte rey. Entrenamientos profesionales, compa√±erismo aut√©ntico y la oportunidad de representar a tu universidad en competencias. Aqu√≠ no solo juegas Box, construyes car√°cter y forjas amistades para toda la vida.",
  llamadaAccion: "¬°√önete al equipo de Box!",
  titulo: "Box VTU"
};

---

<Layout 
  title="Box UNE - Deporte de Combate Universitario"
  description="Taller de box en Universidad UNE. Deporte de combate, acondicionamiento f√≠sico, disciplina y desarrollo de autoconfianza estudiantil."
>
  <main class="bg-white overflow-hidden min-h-screen">
    <div class="container mx-auto px-4 h-full">
      <!-- Mobile Layout (Stack Vertically) -->
      <div class="lg:hidden flex flex-col items-center space-y-6 py-8">
        <!-- Logo and Title -->
        <div class="text-center">
          <img
            src={VTULogo.src}
            alt="Logo de Vive Tu Universidad"
            class="w-32 mx-auto"
          />
          <h1 class="text-2xl font-bold text-blue-800 mt-4">{deporteInfo.titulo}</h1>
        </div>

        <!-- Winner Image -->
        <div class="w-full max-w-sm">
          <img
            src={Winner.src}
            alt="Estudiante ganador con medallas de {deporteInfo.nombre.toLowerCase()}"
            class="w-full h-auto rounded-lg shadow-lg"
          />
        </div>

        <!-- Soccer Info Card -->
        <div class="bg-blue-50 rounded-lg p-6 w-full max-w-sm border-2 border-blue-200">
          <div class="text-center space-y-4">
            <h2 class="text-xl font-bold text-blue-800">{deporteInfo.emoji} {deporteInfo.nombre} </h2>
            
            <div class="space-y-3">
              <div class="bg-white rounded-lg p-3 shadow-sm">
                <h3 class="font-semibold text-gray-800 mb-2">üìÖ Horarios de Entrenamiento</h3>
                <div class="space-y-1 text-sm text-gray-700">
                  {deporteInfo.horarios.map(horario => (
                    <div class="flex justify-between">
                      <span class="font-medium">{horario.dia}:</span>
                      <span>{horario.hora}</span>
                    </div>
                  ))}
                </div>
              </div>
              
              <div class="bg-white rounded-lg p-3 shadow-sm">
                <h3 class="font-semibold text-gray-800 mb-2">üèÜ Categor√≠a</h3>
                <p class="text-sm text-gray-700">{deporteInfo.categoria}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Text Content -->
        <div class="text-center space-y-4 px-4">
          <p class="text-gray-700 text-sm leading-relaxed">
            {deporteInfo.descripcion}
          </p>

          <a
  href="https://docs.google.com/forms/d/e/1FAIpQLSc-Yf1zSlGVwIHjVlRGbP8GETUQ6AX1HXJ8wu-ykYTCV-7z3Q/viewform"
  target="_blank"
  rel="noopener noreferrer"
  class="bg-blue-800 text-white px-6 py-3 rounded-lg font-semibold text-sm hover:bg-blue-900 transition-colors inline-block"
  aria-label={deporteInfo.llamadaAccion}
  title={deporteInfo.llamadaAccion}
>
  {deporteInfo.llamadaAccion} {deporteInfo.emoji}
</a>

        </div>

        <!-- Illustration -->
        <div class="w-full max-w-md">
          <img
            src={Ilustration.src}
            alt="Ilustraci√≥n de estudiantes jugando {deporteInfo.nombre.toLowerCase()}"
            class="w-full h-auto"
          />
        </div>
      </div>

      <!-- Desktop Layout -->
      <div
        class="hidden lg:flex lg:items-stretch lg:justify-center lg:gap-8 py-8 min-h-screen"
      >
        <!-- Left Content -->
        <div
          class="flex flex-col justify-center items-center space-y-6 max-w-md"
        >
          <!-- Logo -->
          <div class="text-center">
            <img
              src={VTULogo.src}
              alt="Logo de Vive Tu Universidad"
              class="w-64 mx-auto"
            />
            <h1 class="text-3xl font-bold text-blue-800 mt-4">{deporteInfo.titulo}</h1>
          </div>

          <!-- Soccer Info Card -->
          <div class="bg-blue-50 rounded-lg p-6 w-full border-2 border-blue-200">
            <div class="text-center space-y-4">
              <h2 class="text-xl font-bold text-blue-800">{deporteInfo.emoji} {deporteInfo.nombre} </h2>
              
              <div class="space-y-3">
                <div class="bg-white rounded-lg p-4 shadow-sm">
                  <h3 class="font-semibold text-gray-800 mb-3">üìÖ Horarios de Entrenamiento</h3>
                  <div class="space-y-2 text-gray-700">
                    {deporteInfo.horarios.map(horario => (
                      <div class="flex justify-between items-center">
                        <span class="font-medium">{horario.dia}:</span>
                        <span class="bg-blue-100 px-3 py-1 rounded-full text-sm">{horario.hora}</span>
                      </div>
                    ))}
                  </div>
                </div>
                
                <div class="bg-white rounded-lg p-4 shadow-sm">
                  <h3 class="font-semibold text-gray-800 mb-2">üèÜ Categor√≠a</h3>
                  <p class="text-gray-700">{deporteInfo.categoria}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Text Content -->
          <div class="text-center space-y-4 px-4">
            <p class="text-gray-700 text-sm leading-relaxed">
              {deporteInfo.descripcion}
            </p>
          </div>

          <!-- Illustration -->
          <div class="w-full max-w-xs">
            <img
              src={Ilustration.src}
              alt="Ilustraci√≥n de estudiantes jugando Box"
              class="w-full h-auto"
            />
          </div>

          <!-- Button -->
          <div class="text-center">
           <a
  href="https://docs.google.com/forms/d/e/1FAIpQLSc-Yf1zSlGVwIHjVlRGbP8GETUQ6AX1HXJ8wu-ykYTCV-7z3Q/viewform"
  target="_blank"
  rel="noopener noreferrer"
  class="bg-blue-800 text-white px-6 py-3 rounded-lg font-semibold text-sm hover:bg-blue-900 transition-colors inline-block"
  aria-label={deporteInfo.llamadaAccion}
  title={deporteInfo.llamadaAccion}
>
  {deporteInfo.llamadaAccion} {deporteInfo.emoji}
</a>

          </div>
        </div>

        <!-- Right Content - Winner Image -->
        <div class="flex items-center justify-center flex-1">
          <img
            src={Winner.src}
            alt="Estudiante ganador con medallas de {deporteInfo.nombre.toLowerCase()}"
            class="h-[60vh] w-auto rounded-lg shadow-xl object-cover"
          />
        </div>
      </div>
    </div>

    <!-- Galer√≠a espec√≠fica de Box -->
    <Galeria actividad={deporteInfo.nombre} />

  </main>
</Layout>