---
// Footer.astro
import Logo from "@logos/UNE_30.png";
---

<footer class="bg-gradient-to-b from-white via-blue-50 to-blue-100 pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Contenido principal del footer -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      
      <!-- Acerca de la empresa -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          Acerca de la empresa
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/politicas-privacidad" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Políticas de privacidad
            </a>
          </li>
          <li>
            <a href="/terminos-condiciones" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Términos y condiciones
            </a>
          </li>
          <li>
            <a href="/registro-colapis" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Registro colapis
            </a>
          </li>
        </ul>
      </div>

      <!-- Nuestra oferta académica -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          Nuestra oferta académica
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/secundaria" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Secundaria
            </a>
          </li>
          <li>
            <a href="/bachillerato" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Bachillerato
            </a>
          </li>
          <li>
            <a href="/licenciaturas" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Licenciaturas
            </a>
          </li>
          <li>
            <a href="/posgrados" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Posgrados
            </a>
          </li>
          <li>
            <a href="/educacion-continua" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Educación continua
            </a>
          </li>
        </ul>
      </div>

      <!-- Recursos educativos -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          Recursos educativos
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/bibliotecas" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Bibliotecas
            </a>
          </li>
          <li>
            <a href="/documentacion" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Documentación
            </a>
          </li>
        </ul>
      </div>

      <!-- Contacto y Redes Sociales -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          Contacto
        </h3>
        
        <!-- Redes sociales -->
        <div class="flex flex-wrap gap-3">
            <!-- Facebook -->
            <a href="https://www.facebook.com/UniversidadUNE" target="_blank" class="w-12 h-12 bg-blue-600 hover:bg-blue-700 rounded-lg flex items-center justify-center transition-all duration-300 hover:scale-105 hover:shadow-lg">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
            </a>

