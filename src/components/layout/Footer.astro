---
// Footer.astro
import UNE_Blanco from "@logos/UNE_blanco.webp";
---

<footer class="bg-gradient-to-b from-white via-blue-50 to-blue-100 pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Contenido principal del footer -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      
      <!-- Acerca de la empresa -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          Acerca de la empresa
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/politicas-privacidad" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Políticas de privacidad
            </a>
          </li>
          <li>
            <a href="/terminos-condiciones" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Términos y condiciones
            </a>
          </li>
          <li>
            <a href="/registro-colapis" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Registro colapis
            </a>
          </li>
        </ul>
      </div>

      <!-- Nuestra oferta académica -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          Nuestra oferta académica
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/secundaria" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Secundaria
            </a>
          </li>
          <li>
            <a href="/bachillerato" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Bachillerato
            </a>
          </li>
          <li>
            <a href="/licenciaturas" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Licenciaturas
            </a>
          </li>
          <li>
            <a href="/posgrados" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Posgrados
            </a>
          </li>
          <li>
            <a href="/educacion-continua" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Educación continua
            </a>
          </li>
        </ul>
      </div>

      <!-- Recursos educativos -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          Recursos educativos
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/bibliotecas" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Bibliotecas
            </a>
          </li>
          <li>
            <a href="/documentacion" class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
              Documentación
            </a>
          </li>
        </ul>
      </div>

      <!-- Contacto y Redes Sociales -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
          Contacto
        </h3>
        
        <!-- Redes sociales -->
        <div class="flex flex-wrap gap-3">
          <!-- Facebook -->
          <a href="#" class="w-10 h-10 bg-blue-600 hover:bg-blue-700 rounded-lg flex items-center justify-center transition-colors group">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>

          <!-- Instagram -->
          <a href="#" class="w-10 h-10 bg-pink-600 hover:bg-pink-700 rounded-lg flex items-center justify-center transition-colors group">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.004 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.596-3.205-1.533l1.296-1.297c.511.511 1.215.826 1.909.826 1.532 0 2.775-1.243 2.775-2.775s-1.243-2.775-2.775-2.775c-.694 0-1.398.315-1.909.826L5.244 8.963c.757-.937 1.908-1.533 3.205-1.533 2.284 0 4.135 1.851 4.135 4.135s-1.851 4.135-4.135 4.135z"/>
            </svg>
          </a>

          <!-- TikTok -->
          <a href="#" class="w-10 h-10 bg-black hover:bg-gray-800 rounded-lg flex items-center justify-center transition-colors group">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19.321 5.562a5.124 5.124 0 0 1-.443-.258 6.228 6.228 0 0 1-1.137-.966c-.849-.849-1.304-1.942-1.304-3.138C16.437.65 15.787 0 15.037 0h-3.396c-.75 0-1.4.65-1.4 1.4v10.398c0 1.537-1.263 2.8-2.8 2.8s-2.8-1.263-2.8-2.8 1.263-2.8 2.8-2.8c.154 0 .306.013.455.037V5.238c-.15-.013-.301-.019-.455-.019-3.706 0-6.719 3.013-6.719 6.719s3.013 6.719 6.719 6.719 6.719-3.013 6.719-6.719V7.484c1.424.872 3.105 1.378 4.916 1.378V5.581c-.75 0-1.463-.095-2.152-.268z"/>
            </svg>
          </a>

          <!-- YouTube -->
          <a href="#" class="w-10 h-10 bg-red-600 hover:bg-red-700 rounded-lg flex items-center justify-center transition-colors group">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>

          <!-- X (Twitter) -->
          <a href="#" class="w-10 h-10 bg-black hover:bg-gray-800 rounded-lg flex items-center justify-center transition-colors group">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>

          <!-- LinkedIn -->
          <a href="#" class="w-10 h-10 bg-orange-500 hover:bg-orange-600 rounded-lg flex items-center justify-center transition-colors group">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Logo y tagline -->
    <div class="text-center border-t border-gray-200 pt-8">
      <div class="flex flex-col items-center space-y-4">
        <img 
          src={UNE_Blanco.src} 
          alt="UNE - Universidad" 
          class="h-16 w-auto"
        />
        <p class="text-sm font-medium text-gray-600">
          30 AÑOS CREYENDO EN TI
        </p>
      </div>
    </div>

    <!-- Copyright -->
    <div class="text-center mt-8 pt-6 border-t border-gray-200">
      <p class="text-sm text-gray-500">
        © 2024 UNE - Universidad. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>

<style>
  /* Efecto hover para los iconos sociales */
  .group:hover svg {
    transform: scale(1.1);
    transition: transform 0.2s ease;
  }

  /* Gradiente de fondo mejorado */
  footer {
    background: linear-gradient(180deg, 
      rgb(255, 255, 255) 0%, 
      rgb(239, 246, 255) 30%, 
      rgb(219, 234, 254) 70%, 
      rgb(191, 219, 254) 100%
    );
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .flex-wrap {
      justify-content: center;
    }
  }

  /* Animación sutil para los links */
  a {
    transition: all 0.2s ease;
  }

  a:hover {
    transform: translateY(-1px);
  }
</style>