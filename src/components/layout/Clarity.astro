---
// Clarity.astro mejorado
export interface Props {
  projectId: string;
}

const { projectId } = Astro.props;
---

<!-- Solo cargar en producción y con consentimiento -->
<script define:vars={{ projectId }}>
  // Solo ejecutar en el cliente y en producción
  if (typeof window !== 'undefined' && !window.location.hostname.includes('localhost')) {
    // Verificar si hay consentimiento de cookies (opcional)
    const hasConsent = localStorage.getItem('clarity-consent') !== 'false';
    
    if (hasConsent) {
      (function(c,l,a,r,i,t,y){
        c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
        t=l.createElement(r);
        t.async=1;
        t.src="https://www.clarity.ms/tag/"+i;
        // Agregar atributos de seguridad
        t.crossOrigin = "anonymous";
        t.referrerPolicy = "strict-origin-when-cross-origin";
        y=l.getElementsByTagName(r)[0];
        y.parentNode.insertBefore(t,y);
      })(window, document, "clarity", "script", projectId);
    }
  }
</script>