---
// Cards.astro
---

<section class="py-16 px-4 ">
  <div class="max-w-7xl mx-auto">
    <!-- Grid: 2 columnas en mobile, 4 en desktop -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
      
      <!-- Card 1: Nuestras Admisiones -->
      <div class="group relative bg-gray-800 rounded-2xl overflow-hidden h-64 cursor-pointer transform transition-all duration-300 hover:scale-105 hover:shadow-2xl">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-600/20 to-purple-600/20"></div>
        <div class="relative h-full flex flex-col justify-center items-center text-center p-6">
          <a href="/about/Admisiones" class="text-white text-xl lg:text-2xl font-bold leading-tight">
            NUESTRAS<br />
            ADMISIONES
          </a>
        </div>
        <!-- Flecha -->
        <div class="absolute bottom-4 right-4 w-8 h-8 bg-white/20 rounded-full flex items-center justify-center group-hover:bg-white/30 transition-colors">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </div>

      <!-- Card 2: Conoce los Planteles -->
      <div class="group relative bg-gray-800 rounded-2xl overflow-hidden h-64 cursor-pointer transform transition-all duration-300 hover:scale-105 hover:shadow-2xl">
        <div class="absolute inset-0 bg-gradient-to-br from-teal-600/20 to-blue-600/20"></div>
        <div class="relative h-full flex flex-col justify-center items-center text-center p-6">
          <h3 class="text-white text-xl lg:text-2xl font-bold leading-tight">
            CONOCE LOS<br />
            PLANTELES
          </h3>
        </div>
        <!-- Flecha -->
        <div class="absolute bottom-4 right-4 w-8 h-8 bg-white/20 rounded-full flex items-center justify-center group-hover:bg-white/30 transition-colors">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </div>

      <!-- Card 3: Vive tu Universidad -->
      <div class="group relative bg-gray-800 rounded-2xl overflow-hidden h-64 cursor-pointer transform transition-all duration-300 hover:scale-105 hover:shadow-2xl">
        <div class="absolute inset-0 bg-gradient-to-br from-green-600/20 to-teal-600/20"></div>
        <div class="relative h-full flex flex-col justify-center items-center text-center p-6">
          <h3 class="text-white text-xl lg:text-2xl font-bold leading-tight">
            VIVE TU<br />
            UNIVERSIDAD
          </h3>
        </div>
        <!-- Flecha -->
        <div class="absolute bottom-4 right-4 w-8 h-8 bg-white/20 rounded-full flex items-center justify-center group-hover:bg-white/30 transition-colors">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </div>

      <!-- Card 4: Test Vocacional -->
      <div class="group relative bg-gray-800 rounded-2xl overflow-hidden h-64 cursor-pointer transform transition-all duration-300 hover:scale-105 hover:shadow-2xl">
        <div class="absolute inset-0 bg-gradient-to-br from-purple-600/20 to-pink-600/20"></div>
        <div class="relative h-full flex flex-col justify-center items-center text-center p-6">
          <h3 class="text-white text-xl lg:text-2xl font-bold leading-tight">
            TEST<br />
            VOCACIONAL
          </h3>
        </div>
        <!-- Flecha -->
        <div class="absolute bottom-4 right-4 w-8 h-8 bg-white/20 rounded-full flex items-center justify-center group-hover:bg-white/30 transition-colors">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </div>

    </div>
  </div>
</section>