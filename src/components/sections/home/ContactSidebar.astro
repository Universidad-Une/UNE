<style>
.contact-sidebar {
  position: fixed;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  z-index: 1000;
  pointer-events: none;
}

.contact-buttons {
  display: flex;
  flex-direction: column;
  gap: 16px;
  pointer-events: auto;
}

.contact-btn {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 60px;
  height: 60px;
  border-radius: 30px 0 0 30px;
  color: white;
  text-decoration: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: -2px 2px 12px rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10px);
  padding-left: 18px;
  margin-left: 0;
}

.contact-btn:hover {
  width: 180px;
  margin-left: -120px;
  box-shadow: -4px 4px 20px rgba(0, 0, 0, 0.25);
}

.contact-btn svg {
  flex-shrink: 0;
  z-index: 2;
  position: relative;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-text {
  margin-left: 16px;
  font-size: 14px;
  font-weight: 600;
  opacity: 0;
  transform: translateX(-10px);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  z-index: 2;
}

.contact-btn:hover .btn-text {
  opacity: 1;
  transform: translateX(0);
}

/* Colores específicos */
.whatsapp-btn {
  background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
}

.whatsapp-btn:hover {
  background: linear-gradient(135deg, #25D366 0%, #075E54 100%);
}

.phone-btn {
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
}

.phone-btn:hover {
  background: linear-gradient(135deg, #2196F3 0%, #0D47A1 100%);
}

.email-btn {
  background: linear-gradient(135deg, #FF5722 0%, #D84315 100%);
}

.email-btn:hover {
  background: linear-gradient(135deg, #FF5722 0%, #BF360C 100%);
}

/* Animación de entrada */
@keyframes slideInRight {
  from {
    transform: translateX(100%) translateY(-50%);
    opacity: 0;
  }
  to {
    transform: translateX(0) translateY(-50%);
    opacity: 1;
  }
}

.contact-sidebar {
  animation: slideInRight 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

.contact-btn:nth-child(1) {
  animation-delay: 0.1s;
}

.contact-btn:nth-child(2) {
  animation-delay: 0.2s;
}

.contact-btn:nth-child(3) {
  animation-delay: 0.3s;
}

/* Responsive */
@media (max-width: 768px) {
  .contact-sidebar {
    right: 0;
    top: auto;
    bottom: 100px;
    transform: none;
  }
  
  .contact-buttons {
    gap: 12px;
  }
  
  .contact-btn {
    width: 50px;
    height: 50px;
    border-radius: 25px 0 0 25px;
    padding-left: 15px;
  }
  
  .contact-btn svg {
    width: 20px;
    height: 20px;
  }
  
  .contact-btn:hover {
    width: 150px;
    margin-left: -100px;
  }
  
  .btn-text {
    margin-left: 12px;
    font-size: 13px;
  }
}

@media (max-width: 480px) {
  .contact-btn:hover {
    width: 120px;
    margin-left: -70px;
  }
  
  .btn-text {
    margin-left: 10px;
    font-size: 12px;
  }
}

/* Estados de accesibilidad */
.contact-btn:focus {
  outline: 2px solid #fff;
  outline-offset: 2px;
}

.contact-btn:focus-visible {
  outline: 2px solid #fff;
  outline-offset: 2px;
}

/* Ocultar en pantallas muy pequeñas si es necesario */
@media (max-width: 360px) {
  .contact-sidebar {
    display: none;
  }
}
</style>