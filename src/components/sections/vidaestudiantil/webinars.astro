<script>
  // Script corregido para manejar la carga de más webinars
  document.addEventListener('DOMContentLoaded', function() {
    const loadMoreBtn = document.getElementById('loadMoreBtn');
    const loadMoreText = document.getElementById('loadMoreText');
    const loadMoreCount = document.getElementById('loadMoreCount');
    const loadMoreIcon = document.getElementById('loadMoreIcon');
    const webinarsContainer = document.getElementById('webinars-container');
    
    // Verificar que los elementos existen
    if (!loadMoreBtn || !webinarsContainer) {
      console.log('Botón "Ver más" no encontrado o contenedor no existe');
      return;
    }
    
    // Obtener todos los webinars
    const allWebinars = Array.from(webinarsContainer.querySelectorAll('[data-webinar-item]'));
    const totalWebinars = allWebinars.length;
    
    // Contar webinars visibles inicialmente (los que NO tienen la clase 'hidden')
    let currentlyVisible = allWebinars.filter(webinar => !webinar.classList.contains('hidden')).length;
    
    const increment = 6; // Cuántos mostrar cada vez
    
    console.log(`Inicializando: ${currentlyVisible} visibles de ${totalWebinars} totales`);
    
    // Verificar que hay webinars ocultos para mostrar
    const hiddenWebinarsCount = totalWebinars - currentlyVisible;
    if (hiddenWebinarsCount <= 0) {
      console.log('No hay webinars ocultos para mostrar');
      loadMoreBtn.style.display = 'none';
      return;
    }
    
    // Actualizar el contador inicial
    if (loadMoreCount) {
      loadMoreCount.textContent = `+${hiddenWebinarsCount}`;
    }
    
    loadMoreBtn.addEventListener('click', function(e) {
      e.preventDefault();
      
      // Prevenir múltiples clics
      if (loadMoreBtn.classList.contains('loading')) {
        console.log('Ya está cargando, ignorando clic');
        return;
      }
      
      console.log('Botón clicado, iniciando carga...');
      
      // Agregar estado de carga
      loadMoreBtn.classList.add('loading');
      if (loadMoreText) loadMoreText.textContent = 'Cargando...';
      if (loadMoreIcon) loadMoreIcon.style.transform = 'rotate(180deg)';
      
      // Simular delay de carga mínimo para UX
      setTimeout(() => {
        // Obtener webinars ocultos actuales
        const hiddenWebinars = Array.from(allWebinars.filter(webinar => webinar.classList.contains('hidden')));
        const webinarsToShow = hiddenWebinars.slice(0, increment);
        
        console.log(`Webinars ocultos encontrados: ${hiddenWebinars.length}`);
        console.log(`Webinars a mostrar: ${webinarsToShow.length}`);
        
        if (webinarsToShow.length === 0) {
          console.log('No hay más webinars para mostrar');
          loadMoreBtn.classList.remove('loading');
          loadMoreBtn.style.display = 'none';
          return;
        }
        
        // Mostrar los siguientes webinars con animación escalonada
        webinarsToShow.forEach((webinar, index) => {
          setTimeout(() => {
            webinar.classList.remove('hidden');
            webinar.classList.add('webinar-fade-in');
            
            // Scroll suave al último elemento mostrado
            if (index === webinarsToShow.length - 1) {
              setTimeout(() => {
                webinar.scrollIntoView({ 
                  behavior: 'smooth', 
                  block: 'center',
                  inline: 'nearest'
                });
              }, 300);
            }
          }, index * 150);
        });
        
        // Actualizar contador de visibles
        currentlyVisible += webinarsToShow.length;
        const remainingWebinars = totalWebinars - currentlyVisible;
        
        console.log(`Ahora visibles: ${currentlyVisible}, restantes: ${remainingWebinars}`);
        
        // Remover estado de carga después de las animaciones
        setTimeout(() => {
          loadMoreBtn.classList.remove('loading');
          if (loadMoreIcon) loadMoreIcon.style.transform = 'rotate(0deg)';
          
          if (remainingWebinars > 0) {
            // Actualizar textos del botón
            if (loadMoreText) loadMoreText.textContent = 'Ver Más Webinars';
            if (loadMoreCount) loadMoreCount.textContent = `+${remainingWebinars}`;
            
            // Añadir indicador de progreso
            const progressIndicator = document.getElementById('progress-indicator');
            const progressText = `(${currentlyVisible}/${totalWebinars})`;
            
            if (!progressIndicator) {
              const progressElement = document.createElement('span');
              progressElement.id = 'progress-indicator';
              progressElement.class = 'text-xs text-gray-500 ml-2';
              progressElement.textContent = progressText;
              loadMoreBtn.appendChild(progressElement);
            } else {
              progressIndicator.textContent = progressText;
            }
          } else {
            // No hay más webinars - ocultar botón con animación
            loadMoreBtn.style.opacity = '0';
            loadMoreBtn.style.transform = 'scale(0.95)';
            loadMoreBtn.style.transition = 'all 0.3s ease';
            
            setTimeout(() => {
              loadMoreBtn.style.display = 'none';
              
              // Mostrar mensaje de finalización
              const completionMessage = document.createElement('div');
              completionMessage.class = 'text-center mt-6 p-4 bg-green-50 rounded-lg border border-green-200';
              completionMessage.innerHTML = `
                <div class="flex items-center justify-center gap-2 text-green-600 mb-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span class="font-medium">¡Completado!</span>
                </div>
                <p class="text-sm text-green-700">
                  Has visto todos los ${totalWebinars} webinars disponibles
                </p>
              `;
              loadMoreBtn.parentNode.replaceChild(completionMessage, loadMoreBtn);
            }, 300);
          }
        }, webinarsToShow.length * 150 + 200);
        
      }, 400);
    });
    
    // Lazy loading para las imágenes
    const images = document.querySelectorAll('img[loading="lazy"]');
    
    if ('IntersectionObserver' in window) {
      const imageObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const img = entry.target;
            
            // Precargar la imagen
            const tempImg = new Image();
            tempImg.onload = () => {
              img.classList.add('fade-in');
            };
            tempImg.src = img.src;
            
            observer.unobserve(img);
          }
        });
      }, {
        rootMargin: '100px 0px',
        threshold: 0.1
      });
      
      images.forEach(img => imageObserver.observe(img));
    }
    
    // Mejora de accesibilidad: navegación con teclado
    const webinarCards = document.querySelectorAll('.webinar-card a');
    webinarCards.forEach(card => {
      card.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          this.click();
        }
      });
    });
    
 
  });
</script>
