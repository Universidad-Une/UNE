---
// Requisitos.astro
import LogoUNE from "@/assets/Logos/UNE_azul.webp";
import { FileDown, CheckCircle } from "@lucide/astro";

export interface Props {
  nivel: string;
  requisitos: {
    items: string[];
    pdfUrl: string;
  };
}

const { nivel, requisitos } = Astro.props;
---

<section class="py-16 px-12 bg-white">
  <div class="container px-4">
    <div class="max-w-7xl mx-auto">
      <p class="text-sm text-gray-600 mb-2">REQUISITOS</p>
      <h2 class="text-3xl font-bold mb-12">
        CONOCE LOS DOCUMENTOS QUE NECESITAS
      </h2>

      <div class="flex flex-col lg:flex-row gap-6 lg:gap-6">
        <!-- Texto vertical -->
        <div class="lg:w-1/3 flex justify-center lg:items-center lg:justify-center">
          <div class="relative">
            <div class="text-4xl lg:text-6xl font-bold text-blue-900 lg:transform lg:-rotate-90 lg:origin-center whitespace-nowrap">
              {nivel.toUpperCase()}
            </div>
          </div>
        </div>

        <!-- Lista de requisitos -->
        <div class="lg:w-2/3 py-4 flex flex-col gap-4 items-center justify-center">
          <div class="shadow-md rounded-lg w-full">
            <div class="space-y-4 px-6 pt-4 min-h-[220px] w-full relative overflow-hidden">
              <!-- Logo de fondo -->
              <div class="absolute inset-0 flex items-center justify-center pointer-events-none z-0">
                <img
                  src={LogoUNE.src}
                  alt="UNE Logo"
                  class="w-32 h-32 md:w-40 md:h-40 lg:w-48 lg:h-48 opacity-50 object-contain select-none"
                />
              </div>

              <!-- Requisitos -->
              <div class="relative z-20 space-y-4">
                {requisitos.items.map((req) => (
                  <div class="flex items-center gap-3 text-gray-800 text-lg">
                    <CheckCircle class="text-green-600 w-5 h-5" />
                    <span>{req}</span>
                  </div>
                ))}
              </div>
            </div>

            <div class="text-sm mt-6 py-6 bg-azul-une rounded-b-lg text-white text-center font-bold">
              Todos los documentos originales y tres copias
            </div>
          </div>

          <!-- BotÃ³n de descarga general -->
          <div class="w-full flex justify-end">
            <a
              href={requisitos.pdfUrl}
              download
              class="border-2 border-green-600 text-green-600 px-8 py-3 rounded-lg hover:bg-green-50 transition-colors duration-300 flex items-center justify-center gap-2"
             aria-label="Ir a Descargar requisitos" title="Descargar requisitos">
              <FileDown class="w-5 h-5" />
              Descargar requisitos
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>