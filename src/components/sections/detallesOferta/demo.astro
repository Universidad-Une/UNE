---
// CardsSlider.astro
---

<!-- Grid en desktop, carousel en mobile -->
<div class="hidden md:grid md:grid-cols-2 gap-6" id="desktop-grid">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden h-full">
    <div class="h-48 bg-gradient-to-br from-blue-500 to-purple-600"></div>
    <div class="p-6">
      <h3 class="text-xl font-semibold text-gray-800 mb-2">Card Título 1</h3>
      <p class="text-gray-600 mb-4">Descripción de la primera card con contenido interesante y atractivo para el usuario.</p>
      <button class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md transition-colors" aria-label="Leer más" title="Leer más">
        Leer más
      </button>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow-lg overflow-hidden h-full">
    <div class="h-48 bg-gradient-to-br from-green-500 to-teal-600"></div>
    <div class="p-6">
      <h3 class="text-xl font-semibold text-gray-800 mb-2">Card Título 2</h3>
      <p class="text-gray-600 mb-4">Segunda card con información relevante y diseño consistente con el resto del componente.</p>
      <button class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md transition-colors" aria-label="Leer más" title="Leer más">
        Leer más
      </button>
    </div>
  </div>
</div>

<!-- Carousel en mobile -->
<div class="block md:hidden splide" id="mobile-carousel">
  <div class="splide__track">
    <ul class="splide__list">
      <li class="splide__slide">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden h-full">
          <div class="h-48 bg-gradient-to-br from-blue-500 to-purple-600"></div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Card Título 1</h3>
            <p class="text-gray-600 mb-4">Descripción de la primera card con contenido interesante y atractivo para el usuario.</p>
            <button class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md transition-colors" aria-label="Leer más" title="Leer más">
              Leer más
            </button>
          </div>
        </div>
      </li>
      
      <li class="splide__slide">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden h-full">
          <div class="h-48 bg-gradient-to-br from-green-500 to-teal-600"></div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Card Título 2</h3>
            <p class="text-gray-600 mb-4">Segunda card con información relevante y diseño consistente con el resto del componente.</p>
            <button class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md transition-colors" aria-label="Leer más" title="Leer más">
              Leer más
            </button>
          </div>
        </div>
      </li>
      
      <li class="splide__slide">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden h-full">
          <div class="h-48 bg-gradient-to-br from-orange-500 to-red-600"></div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Card Título 3</h3>
            <p class="text-gray-600 mb-4">Tercera card completando el conjunto con un diseño atractivo y funcional.</p>
            <button class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-md transition-colors" aria-label="Leer más" title="Leer más">
              Leer más
            </button>
          </div>
        </div>
      </li>
      
      <li class="splide__slide">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden h-full">
          <div class="h-48 bg-gradient-to-br from-purple-500 to-pink-600"></div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">Card Título 4</h3>
            <p class="text-gray-600 mb-4">Cuarta card para mostrar el efecto de slide con padding lateral.</p>
            <button class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded-md transition-colors" aria-label="Leer más" title="Leer más">
              Leer más
            </button>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>

<style>
  /* Solo para el carousel en mobile */
  .splide__slide {
    padding: 0 0.5rem;
  }
  
  .splide__arrow {
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid #e2e8f0;
  }
  
  .splide__arrow:hover {
    background: #ffffff;
  }
  
  .splide__arrow svg {
    fill: #64748b;
  }
  
  .splide__pagination__page.is-active {
    background: #3b82f6;
  }
</style>

<script>
  import { Splide } from '@splidejs/splide';
  import '@splidejs/splide/css';
  
  document.addEventListener('DOMContentLoaded', function() {
    // Solo inicializar el carousel en mobile
    const mobileCarousel = document.getElementById('mobile-carousel');
    
    if (mobileCarousel) {
      const splide = new Splide('#mobile-carousel', {
        type: 'loop',
        padding: '5rem',
        perPage: 1,
        perMove: 1,
        gap: '0.3rem',
        arrows: false,
        pagination: true,
        autoplay: true,
        interval: 3000,
        pauseOnHover: true,
      });
      
      splide.mount();
    }
  });
</script>