---
import logoBlanco from "@assets/Logos/UNE_blanco.webp";
import Psicologia from "@assets/Imagenes/VTU/Congresos/CONGRESOS_PSICOLGIA.png";

export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<div
  class={`relative w-full max-w-7xl mx-auto min-h-[500px] ${className}`}
  style="perspective: 1500px;"
>
  <div
    class="card relative w-full h-full cursor-pointer transition-all duration-500 ease-out group"
    id="interactive-card"
    style="transform-style: preserve-3d;"
  >
    <!-- Card principal con efectos mejorados -->
    <div
      class="relative w-full h-full rounded-[2rem] shadow-[0_30px_80px_rgba(0,0,0,0.4)] overflow-hidden bg-gradient-to-br from-indigo-900 via-blue-800 to-purple-800 border border-white/20 backdrop-blur-sm min-h-[500px]"
      style="transform-style: preserve-3d;"
    >
      <!-- Header superior -->
      <div
        class="absolute top-0 left-0 w-full h-20 bg-gradient-to-r from-indigo-900 to-blue-800 flex items-center justify-between px-8 z-20 border-b border-white/10"
        style="transform: translateZ(40px);"
      >
        <div class="flex items-center gap-4">
          <img
            src={logoBlanco.src}
            alt="UNE Logo"
            class="w-12 h-12 object-contain brightness-125"
          />
          <div>
            <h1 class="text-white font-bold text-xl text-glow">
              Congreso Psicología UNE
            </h1>
            <p class="text-blue-200 text-sm">2025</p>
          </div>
        </div>
        <div class="text-right">
          <p class="text-white font-bold text-xl text-glow">Oct. 19-21 2025</p>
          <p class="text-blue-300 text-sm">Puerto Vallarta</p>
        </div>
      </div>

      <!-- Efectos de fondo animados -->
      <div class="absolute inset-0 opacity-20 mt-20">
        <div
          class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-cyan-400/10 via-transparent to-pink-400/10 animate-pulse"
        >
        </div>
        <div
          class="absolute top-1/4 right-1/4 w-64 h-64 bg-gradient-radial from-blue-500/20 to-transparent rounded-full blur-3xl animate-bounce slow-bounce"
        >
        </div>
        <div
          class="absolute bottom-1/4 left-1/4 w-48 h-48 bg-gradient-radial from-purple-500/20 to-transparent rounded-full blur-2xl"
        >
        </div>
      </div>

      <!-- Contenido principal dividido en dos mitades -->
      <div class="flex h-full pt-20 pb-6">
        <!-- Mitad izquierda: #2025 vertical y Logo Psicología -->
        <div class="w-1/2 flex relative py-6">
          <!-- #2025 pegado al borde izquierdo -->
          <div class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-4">
            <div class="transform rotate-90 origin-center">
              <h2 class="text-6xl font-bold text-white/90 text-glow whitespace-nowrap">
                #2025
              </h2>
            </div>
          </div>
          
          <!-- Logo de Psicología centrado en el espacio restante -->
          <div class="flex-1 flex items-center justify-center pl-24">
            <img 
              src={Psicologia.src}
              alt="Logo Psicología"
              class="w-64 object-contain drop-shadow-lg"
            />
          </div>
        </div>

        <!-- Mitad derecha: Información del congreso -->
        <div class="w-1/2 flex flex-col justify-center p-6 space-y-4">
          <!-- Sede -->
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-3 border border-white/20">
            <p class="text-blue-200 text-base">
              Sede: <span class="text-white font-bold text-lg">Hotel Dreams</span>
            </p>
          </div>

          <!-- Título del congreso -->
          <div class="bg-gradient-to-r from-blue-600/20 to-purple-600/20 backdrop-blur-sm rounded-xl p-4 border border-white/20">
            <h3 class="text-white text-xl font-bold leading-tight text-glow">
              "De la teoría a la práctica: La psicología y su impacto en el mundo actual"
            </h3>
          </div>

          <!-- Bienvenida -->
          <div class="space-y-3">
            <h4 class="text-yellow-400 text-xl font-bold text-glow">
              ¡BIENVENIDOS!
            </h4>
            <p class="text-blue-100 text-base leading-relaxed">
              ¿Qué lugar ocupa la psicología en el mundo que habitamos? En el segundo congreso 
              <span class="text-white font-semibold">Psicología UNE 2025</span>, exploraremos juntos las respuestas.
            </p>
          </div>

        
        </div>
      </div>

      <!-- Elementos de profundidad mejorados -->
      <div
        class="depth-layer absolute w-24 h-24 rounded-full opacity-20 blur-xl bg-gradient-to-br from-cyan-300 to-blue-500 top-8 right-8 group-hover:opacity-40 transition-all duration-500 animate-float"
        style="transform: translateZ(-20px);"
      >
      </div>

      <div
        class="depth-layer absolute w-36 h-36 rounded-full opacity-15 blur-2xl bg-gradient-to-br from-purple-400 to-pink-500 bottom-24 left-10 group-hover:opacity-35 transition-all duration-700 animate-float-delayed"
        style="transform: translateZ(-30px);"
      >
      </div>

      <div
        class="depth-layer absolute w-48 h-48 rounded-full opacity-10 blur-3xl bg-gradient-to-br from-indigo-400 to-purple-600 top-1/2 right-10 group-hover:opacity-30 transition-all duration-1000"
        style="transform: translateZ(-40px);"
      >
      </div>

      <!-- Overlay de brillo en hover mejorado -->
      <div
        class="absolute inset-0 rounded-[2rem] opacity-0 transition-all duration-500 pointer-events-none bg-gradient-to-br from-white/20 via-transparent via-transparent to-white/10 group-hover:opacity-100"
        style="transform: translateZ(80px);"
      >
      </div>

  
    </div>
  </div>
</div>

<style>
  /* Animaciones personalizadas */
  @keyframes gradient {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-10px) rotate(5deg);
    }
  }

  @keyframes float-delayed {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-15px) rotate(-3deg);
    }
  }

  @keyframes border-rotate {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .animate-gradient {
    background-size: 200% auto;
    animation: gradient 3s ease infinite;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 8s ease-in-out infinite;
    animation-delay: 2s;
  }

  .slow-bounce {
    animation-duration: 3s;
  }

  /* Efecto de brillo en texto */
  .text-glow {
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
  }

  /* Responsivo mejorado */
  @media (max-width: 768px) {
    .card {
      transform: none !important;
    }

    .left-half,
    .right-half,
    .depth-layer {
      transform: none !important;
    }

    .animate-float,
    .animate-float-delayed {
      animation: none;
    }
  }
</style>

<script>
  const card = document.getElementById("interactive-card");

  if (card && window.innerWidth > 768) {
    function updateCardPosition() {
      const rect = card.getBoundingClientRect();
      const centerX = rect.left + rect.width / 2;
      const centerY = rect.top + rect.height / 2;

      return { centerX, centerY, width: rect.width, height: rect.height };
    }

    let cardPosition = updateCardPosition();

    window.addEventListener("resize", () => {
      cardPosition = updateCardPosition();
    });

    // Efecto 3D mejorado con transiciones más suaves
    document.addEventListener("mousemove", (e) => {
      const { centerX, centerY, width, height } = cardPosition;

      const deltaX = e.clientX - centerX;
      const deltaY = e.clientY - centerY;

      const distance = Math.sqrt(deltaX * deltaX + deltaY * deltaY);
      const maxDistance = Math.max(width, height);

      if (distance < maxDistance * 1.2) {
        const rotateY = (deltaX / width) * 20;
        const rotateX = -(deltaY / height) * 20;

        const intensity = Math.max(0, 1 - distance / (maxDistance * 1.2));
        const finalRotateX = rotateX * intensity;
        const finalRotateY = rotateY * intensity;

        // Efecto de elevación adicional
        const translateZ = intensity * 20;

        card.style.transform = `perspective(1500px) rotateX(${finalRotateX}deg) rotateY(${finalRotateY}deg) translateZ(${translateZ}px) scale(${1 + intensity * 0.02})`;
      } else {
        card.style.transform =
          "perspective(1500px) rotateX(0deg) rotateY(0deg) translateZ(0px) scale(1)";
      }
    });

    // Efecto de entrada suave
    card.addEventListener("mouseenter", () => {
      card.style.transition = "all 0.3s cubic-bezier(0.23, 1, 0.320, 1)";
    });

    card.addEventListener("mouseleave", () => {
      card.style.transition = "all 0.8s cubic-bezier(0.23, 1, 0.320, 1)";
      card.style.transform =
        "perspective(1500px) rotateX(0deg) rotateY(0deg) translateZ(0px) scale(1)";
    });
  }
</script>