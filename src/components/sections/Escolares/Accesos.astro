---
import FondoAccesos from "@/assets/Imagenes/Adaptables/Ilustracion_clara.webp";
import FondoAccesos_oscuro from "@/assets/Imagenes/Adaptables/Ilustracion_oscura.webp";


---

<section class="py-12 px-4">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Control Escolar -->
      <div class="group">
        <a 
          href="/informacionescolar/Control-escolar" 
          class="block relative overflow-hidden rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl"
         aria-label="Ir a ControlEscolar" title="ControlEscolar">
          <div 
            class="absolute inset-0 bg-cover bg-center bg-no-repeat"
            style={`background-image: url(${FondoAccesos.src})`}
          ></div>
          <div 
            class="absolute inset-0 opacity-0 dark:opacity-100 bg-cover bg-center bg-no-repeat transition-opacity duration-300"
            style={`background-image: url(${FondoAccesos_oscuro.src})`}
          ></div>
          <div class="relative p-8 h-64 flex flex-col justify-between">
            <div class="border-t-2 border-white mb-4"></div>
            <div class="flex-grow flex items-center justify-center">
              <h3 class="text-2xl font-bold text-white text-center leading-tight">
                Control<br>Escolar
              </h3>
            </div>
            <div class="border-t-2 border-white"></div>
          </div>
        </a>
        <p class="text-gray-800 text-sm leading-relaxed mt-4">
          Consulta calificaciones, horarios y expediente desde cualquier lugar
        </p>
      </div>


      <!-- Credencialización -->
      <div class="group">
        <a 
          href="http://credenciales.universidad-une.com/credenciales" 
          class="block relative overflow-hidden rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl"
        >
          <div 
            class="absolute inset-0 bg-cover bg-center bg-no-repeat"
            style={`background-image: url(${FondoAccesos.src})`}
          ></div>
          <div 
            class="absolute inset-0 opacity-0 dark:opacity-100 bg-cover bg-center bg-no-repeat transition-opacity duration-300"
            style={`background-image: url(${FondoAccesos_oscuro.src})`}
          ></div>
          <div class="relative p-8 h-64 flex flex-col justify-between">
            <div class="border-t-2 border-white mb-4"></div>
            <div class="flex-grow flex items-center justify-center">
              <h3 class="text-2xl font-bold text-white text-center leading-tight">
                Credencialización
              </h3>
            </div>
            <div class="border-t-2 border-white"></div>
          </div>
        </a>
        <p class="text-gray-800 text-sm leading-relaxed mt-4">
          Emisión rápida de credenciales estudiantiles y reposiciones
        </p>
      </div>

    
      <!-- Centro de Atención -->
      <div class="group">
        <a 
          href="/contacto/atencion-estudiantes" 
          class="block relative overflow-hidden rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl"
         aria-label="Ir a Centro deAtención" title="Centro deAtención">
          <div 
            class="absolute inset-0 bg-cover bg-center bg-no-repeat"
            style={`background-image: url(${FondoAccesos.src})`}
          ></div>
          <div 
            class="absolute inset-0 opacity-0 dark:opacity-100 bg-cover bg-center bg-no-repeat transition-opacity duration-300"
            style={`background-image: url(${FondoAccesos_oscuro.src})`}
          ></div>
          <div class="relative p-8 h-64 flex flex-col justify-between">
            <div class="border-t-2 border-white mb-4"></div>
            <div class="flex-grow flex items-center justify-center">
              <h3 class="text-2xl font-bold text-white text-center leading-tight">
                Centro de<br>Atención
              </h3>
            </div>
            <div class="border-t-2 border-white"></div>
          </div>
        </a>
        <p class="text-gray-800 text-sm leading-relaxed mt-4">
          Un espacio seguro donde estamos siempre para ti
        </p>
      </div>

    </div>
  </div>
</section>

