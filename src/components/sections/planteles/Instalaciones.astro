---
// Props interface para TypeScript
export interface Props {
  title: string;
  subtitle: string;
  facilities: Array<{
    icon: string;
    title: string;
    description: string;
  }>;
}

const { title, subtitle, facilities } = Astro.props;
---

<section class="py-16 px-4 bg-gray-50">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-16">
      <div
        class="inline-flex items-center px-6 py-2 bg-blue-600 text-white rounded-full text-sm font-medium mb-6"
      >
        Instalaciones
      </div>

      <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        {title}
      </h2>

      <p class="text-lg text-gray-600 max-w-2xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    </div>

    <!-- Facilities Grid -->
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 justify-items-center"
    >
      {
        facilities.map((facility) => (
          <div class="bg-white flex flex-col items-center rounded-2xl p-8 shadow-sm hover:shadow-md transition-shadow duration-300 w-full max-w-sm">
            <div class="w-16 h-16 bg-azul-une rounded-xl flex items-center justify-center mb-6">
              <Fragment
                set:html={`
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                ${facility.icon}
              </svg>
            `}
              />
            </div>

            <h3 class="text-xl font-bold text-gray-900 mb-4">
              {facility.title}
            </h3>

            <p class="text-gray-600 leading-relaxed text-center">
              {facility.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<div class="flex flex-col items-center space-y-4 px-24 mt-12">
  <!-- Texto alineado a la izquierda y al inicio del contenedor -->
  <div class="w-full max-w-4xl self-start">
    <p class="text-2xl font-semibold ">Encuentra tu futuro en Torre Milenio</p>
  </div>

  <!-- Mapa centrado -->
  <iframe
    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3733.589953876011!2d-103.40869892362704!3d20.645564080909562!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8428ac333cb2d3c9%3A0x2d6c2cbc35a8c846!2sUNE!5e0!3m2!1ses!2smx!4v1753125749239!5m2!1ses!2smx"
    width="600"
    height="400"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade">
  </iframe>
</div>

<style>
  /* Opcional: Estilos adicionales si necesitas personalizaci√≥n extra */
  .facility-card {
    transition: transform 0.2s ease-in-out;
  }

  .facility-card:hover {
    transform: translateY(-2px);
  }
</style>
